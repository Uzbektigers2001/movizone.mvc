@model List<MovizoneApp.Models.Actor>
@{
    ViewData["Title"] = "Actors Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Actors</h2>
    <a asp-action="CreateActor" class="btn btn-primary">
        <i class="ti ti-plus"></i> Add New Actor
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Birth Date</th>
                        <th>Age</th>
                        <th>Country</th>
                        <th>Movies</th>
                        <th>TV Series</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actor in Model)
                    {
                        <tr>
                            <td>@actor.Id</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@actor.Photo" alt="@actor.Name" class="rounded-circle me-2"
                                         style="width: 40px; height: 40px; object-fit: cover;">
                                    <strong>@actor.Name</strong>
                                </div>
                            </td>
                            <td>@actor.BirthDate.ToString("MMM dd, yyyy")</td>
                            <td>@actor.Age years</td>
                            <td>@actor.Country</td>
                            <td>
                                <span class="badge bg-primary">@actor.Movies.Count</span>
                            </td>
                            <td>
                                <span class="badge bg-success">@actor.TVSeries.Count</span>
                            </td>
                            <td>
                                <a asp-action="EditActor" asp-route-id="@actor.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="ti ti-edit"></i>
                                </a>
                                <form asp-action="DeleteActor" asp-route-id="@actor.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Delete this actor?')">
                                        <i class="ti ti-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
