@model MovizoneApp.Models.Episode
@{
    ViewData["Title"] = "Edit Episode";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a asp-action="Episodes" asp-route-seriesId="@Model.TVSeriesId" class="btn btn-outline-secondary">
        <i class="ti ti-arrow-left"></i> Back to Episodes
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Edit Episode: @Model.Title</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditEpisode" method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">TV Series *</label>
                    <select asp-for="TVSeriesId" class="form-select" required>
                        @foreach (var series in ViewBag.AllSeries)
                        {
                            <option value="@series.Id" selected="@(Model.TVSeriesId == series.Id)">
                                @series.Title
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Season Number *</label>
                    <input asp-for="SeasonNumber" type="number" class="form-control" min="1" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Episode Number *</label>
                    <input asp-for="EpisodeNumber" type="number" class="form-control" min="1" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 mb-3">
                    <label class="form-label">Episode Title *</label>
                    <input asp-for="Title" class="form-control" required>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Duration (minutes) *</label>
                    <input asp-for="Duration" type="number" class="form-control" min="1" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Description *</label>
                <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Current Thumbnail</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.ThumbnailImage))
                        {
                            <img src="@Model.ThumbnailImage" alt="Thumbnail" style="max-width: 150px; height: auto;">
                        }
                        else
                        {
                            <small class="text-muted">No thumbnail set</small>
                        }
                    </div>
                    <input asp-for="ThumbnailImage" class="form-control" placeholder="/img/episodes/thumbnail1.jpg">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Upload New Thumbnail</label>
                    <input type="file" name="thumbnailFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "VideoURL")</label>
                    <input asp-for="VideoUrl" class="form-control">
                    <small class="text-muted">Or upload new video file below</small>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Upload New Video File</label>
                    <input type="file" name="videoFile" class="form-control" accept="video/*">
                    <small class="text-muted">Supported formats: MP4, WebM, AVI (max 500MB)</small>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Air Date</label>
                <input asp-for="AirDate" type="date" class="form-control">
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i> Update Episode
                </button>
                <a asp-action="Episodes" asp-route-seriesId="@Model.TVSeriesId" class="btn btn-outline-secondary">@Localizer.GetString("Cancel")</a>
            </div>
        </form>
    </div>
</div>
