@model MovizoneApp.DTOs.CreateMovieDto
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "CreateMovie");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- main title -->
<div class="row">
    <div class="col-12">
        <div class="main__title">
            <h2>@Localizer.GetString("Admin", "AddNewMovie")</h2>
            <a asp-action="Movies" class="main__title-link">
                <i class="ti ti-arrow-left"></i> @Localizer.GetString("Admin", "BackToMovies")
            </a>
        </div>
    </div>
</div>
<!-- end main title -->

<form asp-action="CreateMovie" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">
            <div class="dashbox">
                <div class="dashbox__title">
                    <h3>@Localizer.GetString("Admin", "BasicInformation")</h3>
                </div>
                <div style="padding: 20px;">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label">@Localizer.GetString("Movie", "Title") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Title" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "Year") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Year" type="number" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">@Localizer.GetString("Movie", "Rating") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Rating" type="number" step="0.1" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">@Localizer.GetString("Movie", "Director") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Director" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">@Localizer.GetString("Movie", "Genre") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Genre" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-3 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "Country") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Country" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">@Localizer.GetString("Admin", "Duration") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Duration" type="number" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                            <small style="color: #999;">min</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@Localizer.GetString("Movie", "Description") <span style="color: #dc3545;">*</span></label>
                        <textarea asp-for="Description" class="form-control" rows="3" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Admin", "CoverImagePath")</label>
                            <input asp-for="CoverImage" class="form-control" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "UploadCoverImage")</label>
                            <input type="file" name="coverFile" class="form-control" accept="image/*" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Admin", "PosterImagePath") <small style="color: #999;">(@Localizer.GetString("Admin", "Optional"))</small></label>
                            <input asp-for="PosterImage" class="form-control" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "UploadPosterImage")</label>
                            <input type="file" name="posterFile" class="form-control" accept="image/*" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Admin", "BannerImagePath") <small style="color: #999;">(@Localizer.GetString("Admin", "Optional"))</small></label>
                            <input asp-for="BannerImage" class="form-control" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "UploadBannerImage")</label>
                            <input type="file" name="bannerFile" class="form-control" accept="image/*" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@Localizer.GetString("Admin", "ActorsCommaSeparated") <small style="color: #999;">(@Localizer.GetString("Admin", "Optional"))</small></label>
                        <input type="text" name="actorsList" class="form-control" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Admin", "ReleaseDate") <small style="color: #999;">(@Localizer.GetString("Admin", "Optional"))</small></label>
                            <input asp-for="ReleaseDate" type="date" class="form-control" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Admin", "VideoURL") <small style="color: #999;">(@Localizer.GetString("Admin", "Optional"))</small></label>
                            <input asp-for="VideoUrl" class="form-control" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">@Localizer.GetString("Admin", "VideoFileUpload") <small style="color: #999;">(@Localizer.GetString("Admin", "Optional"))</small></label>
                        <input type="file" name="videoFile" class="form-control" accept="video/*" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <div class="form-check">
                                <input asp-for="IsFeatured" type="checkbox" class="form-check-input">
                                <label class="form-check-label">@Localizer.GetString("Admin", "FeaturedMovie")</label>
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="form-check">
                                <input asp-for="ShowInBanner" type="checkbox" class="form-check-input">
                                <label class="form-check-label">@Localizer.GetString("Admin", "ShowInBannerCarousel")</label>
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div class="form-check">
                                <input asp-for="IsHidden" type="checkbox" class="form-check-input">
                                <label class="form-check-label">@Localizer.GetString("Admin", "HideFromPublic")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div style="display: flex; gap: 10px; margin-top: 20px;">
                <button type="submit" class="btn btn-primary" style="background: var(--primary-color); border: none;">
                    <i class="ti ti-device-floppy"></i> @Localizer.GetString("Admin", "SaveMovie")
                </button>
                <a asp-action="Movies" class="btn btn-outline-secondary" style="border: 1px solid rgba(255,255,255,0.1); color: var(--text-color); text-decoration: none;">
                    @Localizer.GetString("Common", "Cancel")
                </a>
            </div>
        </div>
    </div>
</form>
