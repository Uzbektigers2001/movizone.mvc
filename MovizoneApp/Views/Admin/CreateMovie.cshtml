@model MovizoneApp.Models.Movie
@{
    ViewData["Title"] = "Create Movie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a asp-action="Movies" class="btn btn-outline-secondary">
        <i class="ti ti-arrow-left"></i> Back to Movies
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Add New Movie</h5>
    </div>
    <div class="card-body">
        <form asp-action="CreateMovie" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Title *</label>
                    <input asp-for="Title" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Year *</label>
                    <input asp-for="Year" type="number" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Rating *</label>
                    <input asp-for="Rating" type="number" step="0.1" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Director *</label>
                    <input asp-for="Director" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Duration (minutes) *</label>
                    <input asp-for="Duration" type="number" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Country *</label>
                    <input asp-for="Country" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Genre *</label>
                <input asp-for="Genre" class="form-control" placeholder="Action, Drama, Thriller">
            </div>

            <div class="mb-3">
                <label class="form-label">Description *</label>
                <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Cover Image Path</label>
                    <input asp-for="CoverImage" class="form-control" placeholder="/img/covers/cover1.jpg">
                    <small class="text-muted">Or upload below</small>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Upload Cover Image</label>
                    <input type="file" name="coverFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Poster Image Path (for video player)</label>
                    <input asp-for="PosterImage" class="form-control" placeholder="/img/posters/poster1.jpg">
                    <small class="text-muted">Or upload below. Falls back to cover image if not set.</small>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Upload Poster Image</label>
                    <input type="file" name="posterFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Actors (comma separated)</label>
                <input type="text" name="actorsList" class="form-control" placeholder="Tom Cruise, Emily Blunt">
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Release Date</label>
                    <input asp-for="ReleaseDate" type="date" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Video URL</label>
                    <input asp-for="VideoUrl" class="form-control" placeholder="https://... or upload below">
                    <small class="text-muted">Or upload video file below</small>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload Video File</label>
                <input type="file" name="videoFile" class="form-control" accept="video/*">
                <small class="text-muted">Supported formats: MP4, WebM, AVI (max 500MB)</small>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsFeatured" type="checkbox" class="form-check-input" id="featured">
                <label class="form-check-label" for="featured">
                    Featured Movie (show on homepage)
                </label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i> Save Movie
                </button>
                <a asp-action="Movies" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
