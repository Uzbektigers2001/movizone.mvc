@model List<MovizoneApp.Models.Comment>
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "CommentsManagement");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="ti ti-message"></i> @Localizer.GetString("Admin", "CommentsManagement")</h2>
</div>

<!-- Search Form -->
<div class="card border-0 shadow-sm mb-3">
    <div class="card-body">
        <form asp-action="Comments" method="get" class="row g-3">
            <div class="col-md-10">
                <input type="text" name="search" class="form-control" placeholder="@Localizer.GetString("Admin", "SearchCommentsByUserOrText")" value="@ViewBag.SearchQuery">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="ti ti-search"></i> @Localizer.GetString("Admin", "Search")
                </button>
            </div>
        </form>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="ti ti-check"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card border-0 shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>@Localizer.GetString("Admin", "ID")</th>
                            <th>@Localizer.GetString("Admin", "User")</th>
                            <th>@Localizer.GetString("Admin", "ContentType")</th>
                            <th>@Localizer.GetString("Admin", "CommentText")</th>
                            <th>@Localizer.GetString("Common", "Status")</th>
                            <th>@Localizer.GetString("Admin", "Date")</th>
                            <th>@Localizer.GetString("Common", "Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var comment in Model)
                        {
                            <tr>
                                <td>@comment.Id</td>
                                <td>
                                    <strong>@comment.UserName</strong><br>
                                    <small class="text-muted">User ID: @comment.UserId</small>
                                </td>
                                <td>
                                    @if (comment.MovieId.HasValue)
                                    {
                                        <span class="badge bg-primary">Movie #@comment.MovieId</span>
                                    }
                                    else if (comment.TVSeriesId.HasValue)
                                    {
                                        <span class="badge bg-success">TV Series #@comment.TVSeriesId</span>
                                    }
                                </td>
                                <td>
                                    <p class="mb-0" style="max-width: 400px;">@comment.Text</p>
                                </td>
                                <td>
                                    @if (comment.IsApproved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                </td>
                                <td>
                                    <small>@comment.CreatedAt.ToString("MMM dd, yyyy")<br>@comment.CreatedAt.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        @if (!comment.IsApproved)
                                        {
                                            <form asp-action="ApproveComment" asp-route-id="@comment.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-success" title="Approve">
                                                    <i class="ti ti-check"></i>
                                                </button>
                                            </form>
                                        }
                                        <form asp-action="DeleteComment" asp-route-id="@comment.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    onclick="return confirm('Delete this comment?')">
                                                <i class="ti ti-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="ti ti-info-circle"></i> No comments found.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss success alerts after 5 seconds
        setTimeout(function() {
            $('.alert-success').fadeOut('slow');
        }, 5000);
    </script>
}
