@model MovizoneApp.DTOs.UpdateUserDto
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "EditUser");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- main title -->
<div class="row">
    <div class="col-12">
        <div class="main__title">
            <h2>@Localizer.GetString("Admin", "EditUser"): @Model.Name</h2>
            <a asp-action="Users" class="main__title-link">
                <i class="ti ti-arrow-left"></i> @Localizer.GetString("Admin", "BackToUsers")
            </a>
        </div>
    </div>
</div>
<!-- end main title -->

<form asp-action="EditUser" method="post">
    <input asp-for="Id" type="hidden">
    <input asp-for="CreatedAt" type="hidden">
    <input asp-for="Avatar" type="hidden">

    <div class="row">
        <div class="col-12">
            <div class="dashbox">
                <div class="dashbox__title">
                    <h3>@Localizer.GetString("Admin", "UserInformation")</h3>
                </div>
                <div style="padding: 20px;">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "Name") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Name" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "Email") <span style="color: #dc3545;">*</span></label>
                            <input asp-for="Email" type="email" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "Role") <span style="color: #dc3545;">*</span></label>
                            <select asp-for="Role" class="form-control" required style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                                <option value="User">@Localizer.GetString("Admin", "UserRole")</option>
                                <option value="Admin">@Localizer.GetString("Admin", "AdminRole")</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">@Localizer.GetString("Common", "NewPassword") <small style="color: #999;">(@Localizer.GetString("Admin", "Optional"))</small></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                            <small style="color: #999;">@Localizer.GetString("Admin", "OnlyFillToChangePassword")</small>
                        </div>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input" id="active">
                        <label class="form-check-label" for="active">
                            @Localizer.GetString("Admin", "AccountActive")
                        </label>
                    </div>

                    <div style="background: rgba(23,162,184,0.1); border: 1px solid rgba(23,162,184,0.2); border-radius: 8px; padding: 12px; color: var(--text-color);">
                        <i class="ti ti-info-circle" style="color: #17a2b8;"></i>
                        <strong>@Localizer.GetString("Admin", "AccountCreated"):</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div style="display: flex; gap: 10px; margin-top: 20px;">
                <button type="submit" class="btn btn-primary" style="background: var(--primary-color); border: none;">
                    <i class="ti ti-device-floppy"></i> @Localizer.GetString("Admin", "UpdateUser")
                </button>
                <a asp-action="Users" class="btn btn-outline-secondary" style="border: 1px solid rgba(255,255,255,0.1); color: var(--text-color); text-decoration: none;">
                    @Localizer.GetString("Common", "Cancel")
                </a>
            </div>
        </div>
    </div>
</form>
