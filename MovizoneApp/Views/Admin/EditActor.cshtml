@model MovizoneApp.Models.Actor
@{
    ViewData["Title"] = "Edit Actor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a asp-action="Actors" class="btn btn-outline-secondary">
        <i class="ti ti-arrow-left"></i> Back to Actors
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Edit Actor: @Model.Name</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditActor" method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Name *</label>
                    <input asp-for="Name" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Birth Date *</label>
                    <input asp-for="BirthDate" type="date" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Country *</label>
                    <input asp-for="Country" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Biography *</label>
                <textarea asp-for="Bio" class="form-control" rows="4" required></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Current Photo</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.Photo))
                        {
                            <img src="@Model.Photo" alt="@Model.Name" style="max-width: 150px; border-radius: 50%;">
                        }
                    </div>
                    <input asp-for="Photo" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Upload New Photo</label>
                    <input type="file" name="photoFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Movies (comma separated)</label>
                    <input type="text" name="moviesList" class="form-control" value="@string.Join(", ", Model.Movies)">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">TV Series (comma separated)</label>
                    <input type="text" name="seriesList" class="form-control" value="@string.Join(", ", Model.TVSeries)">
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i> Update Actor
                </button>
                <a asp-action="Actors" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
