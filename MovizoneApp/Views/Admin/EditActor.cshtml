@model MovizoneApp.DTOs.UpdateActorDto
@{
    ViewData["Title"] = "Edit Actor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a asp-action="Actors" class="btn btn-outline-secondary">
        <i class="ti ti-arrow-left"></i> @Localizer.GetString("Admin", "BackToActors")
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">@Localizer.GetString("Admin", "EditActor"): @Model.Name</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditActor" method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "NameRequired")</label>
                    <input asp-for="Name" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "BirthDateRequired")</label>
                    <input asp-for="BirthDate" type="date" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "CountryRequired")</label>
                    <input asp-for="Country" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer.GetString("Admin", "BiographyRequired")</label>
                <textarea asp-for="Bio" class="form-control" rows="4" required></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "CurrentPhoto")</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.Photo))
                        {
                            <img src="@Model.Photo" alt="@Model.Name" style="max-width: 150px; border-radius: 50%;">
                        }
                    </div>
                    <input asp-for="Photo" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("UploadNewPhoto")</label>
                    <input type="file" name="photoFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "MoviesCommaSeparated")</label>
                    <input type="text" name="moviesList" class="form-control" value="@string.Join(", ", Model.Movies)">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "TVSeriesCommaSeparated")</label>
                    <input type="text" name="seriesList" class="form-control" value="@string.Join(", ", Model.TVSeries)">
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i> @Localizer.GetString("Admin", "UpdateActor")
                </button>
                <a asp-action="Actors" class="btn btn-outline-secondary">@Localizer.GetString("Cancel")</a>
            </div>
        </form>
    </div>
</div>
