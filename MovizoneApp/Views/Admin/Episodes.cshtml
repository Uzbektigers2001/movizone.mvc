@model List<MovizoneApp.Models.Episode>
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "ManageEpisodes");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- main title -->
<div class="row">
    <div class="col-12">
        <div class="main__title">
            <h2>
                @if (ViewBag.SelectedSeriesTitle != null)
                {
                    <text>@Localizer.GetString("TVSeries", "Episodes") - @ViewBag.SelectedSeriesTitle</text>
                }
                else
                {
                    <text>@Localizer.GetString("Admin", "AllEpisodes")</text>
                }
            </h2>
            <a asp-action="CreateEpisode" asp-route-seriesId="@ViewBag.SelectedSeriesId" class="main__title-link">@Localizer.GetString("Admin", "AddNewEpisode")</a>
        </div>
    </div>
</div>
<!-- end main title -->

<!-- Series Filter -->
<div class="row">
    <div class="col-12">
        <div class="dashbox">
            <div class="dashbox__title">
                <h3><i class="ti ti-filter"></i> @Localizer.GetString("Admin", "FilterBySeries")</h3>
            </div>
            <div style="padding: 20px;">
                <form method="get" asp-action="Episodes" class="row g-3">
                    <div class="col-md-6">
                        <select name="seriesId" class="form-select" onchange="this.form.submit()" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                            <option value="">@Localizer.GetString("Admin", "AllSeries")</option>
                            @foreach (var series in ViewBag.AllSeries)
                            {
                                <option value="@series.Id" selected="@(ViewBag.SelectedSeriesId == series.Id)">
                                    @series.Title
                                </option>
                            }
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Episodes Table -->
@if (Model.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="dashbox">
                <div class="dashbox__table-wrap">
                    <table class="dashbox__table">
                    <thead>
                        <tr>
                            <th>@Localizer.GetString("Admin", "ID")</th>
                            <th>@Localizer.GetString("Common", "TVSeries")</th>
                            <th>@Localizer.GetString("TVSeries", "Season")</th>
                            <th>@Localizer.GetString("TVSeries", "Episode")</th>
                            <th>@Localizer.GetString("Movie", "Title")</th>
                            <th>@Localizer.GetString("Admin", "Duration")</th>
                            <th>@Localizer.GetString("TVSeries", "AirDate")</th>
                            <th>@Localizer.GetString("Common", "Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var allSeries = ViewBag.AllSeries as List<MovizoneApp.Models.TVSeries>;
                            var seriesDict = allSeries?.ToDictionary(s => s.Id, s => s.Title) ?? new Dictionary<int, string>();
                        }
                        @foreach (var episode in Model)
                        {
                            <tr>
                                <td><div class="dashbox__table-text dashbox__table-text--grey">@episode.Id</div></td>
                                <td>
                                    <div class="dashbox__table-text">
                                        @if (seriesDict.ContainsKey(episode.TVSeriesId))
                                        {
                                            @seriesDict[episode.TVSeriesId]
                                        }
                                        else
                                        {
                                            <text>Unknown</text>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="dashbox__table-text">
                                        <span style="color: var(--primary-color); background: rgba(255,85,165,0.1); padding: 4px 10px; border-radius: 6px; font-size: 12px; font-weight: 600;">S@episode.SeasonNumber</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="dashbox__table-text">
                                        <span style="color: #17a2b8; background: rgba(23,162,184,0.1); padding: 4px 10px; border-radius: 6px; font-size: 12px; font-weight: 600;">E@episode.EpisodeNumber</span>
                                    </div>
                                </td>
                                <td><div class="dashbox__table-text">@episode.Title</div></td>
                                <td><div class="dashbox__table-text">@episode.Duration @Localizer.GetString("Admin", "Min")</div></td>
                                <td>
                                    <div class="dashbox__table-text">
                                        @if (episode.AirDate.HasValue)
                                        {
                                            @episode.AirDate.Value.ToString("MMM dd, yyyy")
                                        }
                                        else
                                        {
                                            <text>â€”</text>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="EditEpisode" asp-route-id="@episode.Id" style="display: inline-block; padding: 6px 12px; background: rgba(255,255,255,0.05); border-radius: 6px; color: var(--text-color); text-decoration: none; margin-right: 5px;">
                                        <i class="ti ti-edit"></i>
                                    </a>
                                    <form asp-action="DeleteEpisode" method="post" style="display: inline-block;" onsubmit="return confirm('@Localizer.GetString("Admin", "DeleteThisEpisode")');">
                                        <input type="hidden" name="id" value="@episode.Id" />
                                        <button type="submit" style="padding: 6px 12px; background: rgba(220,53,69,0.1); border: none; border-radius: 6px; color: var(--danger-color); cursor: pointer;">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            @{
                var currentPage = ViewBag.CurrentPage ?? 1;
                var totalPages = ViewBag.TotalPages ?? 1;
                var selectedSeriesId = ViewBag.SelectedSeriesId;
            }
            @if (totalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                            <a class="page-link" asp-action="Episodes" asp-route-page="@(currentPage - 1)" asp-route-seriesId="@selectedSeriesId">
                                <i class="ti ti-chevron-left"></i> @Localizer.GetString("Admin", "Previous")
                            </a>
                        </li>

                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="page-item @(i == currentPage ? "active" : "")">
                                <a class="page-link" asp-action="Episodes" asp-route-page="@i" asp-route-seriesId="@selectedSeriesId">@i</a>
                            </li>
                        }

                        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                            <a class="page-link" asp-action="Episodes" asp-route-page="@(currentPage + 1)" asp-route-seriesId="@selectedSeriesId">
                                @Localizer.GetString("Admin", "Next") <i class="ti ti-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <p style="color: var(--text-muted);">@Localizer.GetString("Admin", "TotalEpisodes"): @Model.Count</p>
    </div>
</div>
}
else
{
    <div class="row">
        <div class="col-12">
            <div class="dashbox">
                <div style="padding: 60px 20px; text-align: center;">
                    <i class="ti ti-movie-off" style="font-size: 48px; opacity: 0.3; color: var(--text-muted);"></i>
                    <p style="color: var(--text-muted); margin-top: 20px;">@Localizer.GetString("Admin", "NoEpisodesFound")</p>
                    <a asp-action="CreateEpisode" asp-route-seriesId="@ViewBag.SelectedSeriesId" class="main__title-link" style="display: inline-flex;">
                        <i class="ti ti-plus"></i> @Localizer.GetString("Admin", "AddFirstEpisode")
                    </a>
                </div>
            </div>
        </div>
    </div>
}
