@model List<MovizoneApp.Models.Episode>
@{
    ViewData["Title"] = "Manage Episodes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        @if (ViewBag.SelectedSeriesTitle != null)
        {
            <text>Episodes - @ViewBag.SelectedSeriesTitle</text>
        }
        else
        {
            <text>All Episodes</text>
        }
    </h2>
    <div>
        <a asp-action="CreateEpisode" asp-route-seriesId="@ViewBag.SelectedSeriesId" class="btn btn-primary">
            <i class="ti ti-plus"></i> Add New Episode
        </a>
    </div>
</div>

<!-- Series Filter -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" asp-action="Episodes" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Filter by Series</label>
                <select name="seriesId" class="form-select" onchange="this.form.submit()">
                    <option value="">All Series</option>
                    @foreach (var series in ViewBag.AllSeries)
                    {
                        <option value="@series.Id" selected="@(ViewBag.SelectedSeriesId == series.Id)">
                            @series.Title
                        </option>
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<!-- Episodes Table -->
@if (Model.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Series</th>
                            <th>Season</th>
                            <th>Episode</th>
                            <th>Title</th>
                            <th>Duration</th>
                            <th>Air Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var allSeries = ViewBag.AllSeries as List<MovizoneApp.Models.TVSeries>;
                            var seriesDict = allSeries?.ToDictionary(s => s.Id, s => s.Title) ?? new Dictionary<int, string>();
                        }
                        @foreach (var episode in Model)
                        {
                            <tr>
                                <td>@episode.Id</td>
                                <td>
                                    @if (seriesDict.ContainsKey(episode.TVSeriesId))
                                    {
                                        @seriesDict[episode.TVSeriesId]
                                    }
                                    else
                                    {
                                        <text>Unknown</text>
                                    }
                                </td>
                                <td><span class="badge bg-primary">S@episode.SeasonNumber</span></td>
                                <td><span class="badge bg-info">E@episode.EpisodeNumber</span></td>
                                <td>@episode.Title</td>
                                <td>@episode.Duration min</td>
                                <td>
                                    @if (episode.AirDate.HasValue)
                                    {
                                        @episode.AirDate.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditEpisode" asp-route-id="@episode.Id" class="btn btn-outline-primary" title="Edit">
                                            <i class="ti ti-edit"></i>
                                        </a>
                                        <form asp-action="DeleteEpisode" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this episode?');">
                                            <input type="hidden" name="id" value="@episode.Id" />
                                            <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                <i class="ti ti-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <p class="text-muted">Total Episodes: @Model.Count</p>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="ti ti-movie-off" style="font-size: 48px; opacity: 0.3;"></i>
            <p class="text-muted mt-3">No episodes found.</p>
            <a asp-action="CreateEpisode" asp-route-seriesId="@ViewBag.SelectedSeriesId" class="btn btn-primary">
                <i class="ti ti-plus"></i> Add First Episode
            </a>
        </div>
    </div>
}
