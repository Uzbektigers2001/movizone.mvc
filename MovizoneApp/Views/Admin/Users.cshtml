@model List<MovizoneApp.Models.User>
@{
    ViewData["Title"] = "Users Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <h2>Users Management</h2>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>@Localizer.GetString("Name")</th>
                        <th>@Localizer.GetString("Email")</th>
                        <th>@Localizer.GetString("Role")</th>
                        <th>Created</th>
                        <th>Status</th>
                        <th>@Localizer.GetString("Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@user.Avatar" alt="Avatar" class="rounded-circle me-2"
                                         style="width: 32px; height: 32px; object-fit: cover;">
                                    <strong>@user.Name</strong>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-danger">@user.Role</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@user.Role</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="ti ti-edit"></i>
                                </a>
                                @if (user.Role != "Admin")
                                {
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('@Localizer.GetString("Admin", "DeleteThisUser")')">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
