@model MovizoneApp.DTOs.UpdateTVSeriesDto
@{
    ViewData["Title"] = "Edit TV Series";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a asp-action="Series" class="btn btn-outline-secondary">
        <i class="ti ti-arrow-left"></i> @Localizer.GetString("Admin", "BackToSeries")
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">@Localizer.GetString("Admin", "EditSeries"): @Model.Title</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditSeries" method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "TitleRequired")</label>
                    <input asp-for="Title" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "YearRequired")</label>
                    <input asp-for="Year" type="number" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "RatingRequired")</label>
                    <input asp-for="Rating" type="number" step="0.1" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "CreatorRequired")</label>
                    <input asp-for="Creator" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "SeasonsRequired")</label>
                    <input asp-for="Seasons" type="number" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Total Episodes *</label>
                    <input asp-for="TotalEpisodes" type="number" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "CountryRequired")</label>
                    <input asp-for="Country" class="form-control" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "StatusRequired")</label>
                    <select asp-for="Status" class="form-select" required>
                        <option value="Ongoing">Ongoing</option>
                        <option value="Completed">Completed</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer.GetString("Admin", "GenreRequired")</label>
                <input asp-for="Genre" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer.GetString("Admin", "DescriptionRequired")</label>
                <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Current Cover</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.CoverImage))
                        {
                            <img src="@Model.CoverImage" alt="Cover" style="max-width: 150px;">
                        }
                    </div>
                    <input asp-for="CoverImage" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("UploadNewCover")</label>
                    <input type="file" name="coverFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "CurrentPosterImage")</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.PosterImage))
                        {
                            <img src="@Model.PosterImage" alt="Poster" style="max-width: 150px; height: auto;">
                        }
                        else
                        {
                            <small class="text-muted">@Localizer.GetString("Admin", "NoPosterSet")</small>
                        }
                    </div>
                    <input asp-for="PosterImage" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("UploadNewPoster")</label>
                    <input type="file" name="posterFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "CurrentBannerImage")</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.BannerImage))
                        {
                            <img src="@Model.BannerImage" alt="Banner" style="max-width: 200px; height: auto;">
                        }
                        else
                        {
                            <small class="text-muted">@Localizer.GetString("Admin", "NoBannerSet")</small>
                        }
                    </div>
                    <input asp-for="BannerImage" class="form-control" placeholder="/img/banners/banner10.jpg">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("UploadNewBanner")</label>
                    <input type="file" name="bannerFile" class="form-control" accept="image/*">
                    <small class="text-muted">@Localizer.GetString("Admin", "RecommendedSize")</small>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer.GetString("Admin", "ActorsCommaSeparated")</label>
                <input type="text" name="actorsList" class="form-control" value="@string.Join(", ", Model.Actors)">
            </div>

            <div class="mb-3">
                <label class="form-label">First Aired</label>
                <input asp-for="FirstAired" type="date" class="form-control">
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsFeatured" type="checkbox" class="form-check-input" id="featured">
                    <label class="form-check-label" for="featured">
                        @Localizer.GetString("Admin", "FeaturedSeries")
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="ShowInBanner" type="checkbox" class="form-check-input" id="showInBanner">
                    <label class="form-check-label" for="showInBanner">
                        @Localizer.GetString("Admin", "ShowInBannerCarousel")
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="IsHidden" type="checkbox" class="form-check-input" id="hidden">
                    <label class="form-check-label" for="hidden">
                        @Localizer.GetString("Admin", "HideFromPublic")
                    </label>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i> @Localizer.GetString("Admin", "UpdateSeries")
                </button>
                <a asp-action="Series" class="btn btn-outline-secondary">@Localizer.GetString("Cancel")</a>
            </div>
        </form>
    </div>
</div>
