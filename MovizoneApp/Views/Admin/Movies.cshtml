@model List<MovizoneApp.Models.Movie>
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "MoviesManagement");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- main title -->
<div class="row">
    <div class="col-12">
        <div class="main__title">
            <h2>@Localizer.GetString("Common", "Movies")</h2>
            <a asp-action="CreateMovie" class="main__title-link">@Localizer.GetString("Admin", "AddNewMovie")</a>
        </div>
    </div>
</div>
<!-- end main title -->

<!-- Search Form -->
<div class="row">
    <div class="col-12">
        <div class="dashbox">
            <div class="dashbox__title">
                <h3><i class="ti ti-search"></i> @Localizer.GetString("Admin", "Search")</h3>
            </div>
            <div style="padding: 20px;">
                <form asp-action="Movies" method="get" class="row g-3">
                    <div class="col-md-10">
                        <input type="text" name="search" class="form-control" placeholder="@Localizer.GetString("Admin", "SearchMoviesByTitle")" value="@ViewBag.SearchQuery" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100" style="background: var(--primary-color); border: none;">
                            <i class="ti ti-search"></i> @Localizer.GetString("Admin", "Search")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="dashbox">
            <div class="dashbox__table-wrap">
                <table class="dashbox__table">
                <thead>
                    <tr>
                        <th>@Localizer.GetString("Admin", "ID")</th>
                        <th>@Localizer.GetString("Movie", "Title")</th>
                        <th>@Localizer.GetString("Common", "Year")</th>
                        <th>@Localizer.GetString("Movie", "Rating")</th>
                        <th>@Localizer.GetString("Admin", "Genre")</th>
                        <th>@Localizer.GetString("Admin", "Duration")</th>
                        <th>@Localizer.GetString("Admin", "Featured")</th>
                        <th>@Localizer.GetString("Common", "Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td><div class="dashbox__table-text dashbox__table-text--grey">@movie.Id</div></td>
                            <td>
                                <div class="dashbox__table-text">
                                    <a asp-action="EditMovie" asp-route-id="@movie.Id">@movie.Title</a><br>
                                    <small style="color: var(--text-muted);">@movie.Director</small>
                                </div>
                            </td>
                            <td><div class="dashbox__table-text">@movie.Year</div></td>
                            <td>
                                <div class="dashbox__table-text dashbox__table-text--rate">
                                    <i class="ti ti-star"></i> @movie.Rating.ToString("0.0")
                                </div>
                            </td>
                            <td><div class="dashbox__table-text">@movie.Genre</div></td>
                            <td><div class="dashbox__table-text">@movie.Duration min</div></td>
                            <td>
                                <div class="dashbox__table-text">
                                    @if (movie.IsFeatured)
                                    {
                                        <span style="color: var(--success-color);">✓ @Localizer.GetString("Admin", "Yes")</span>
                                    }
                                    else
                                    {
                                        <span style="color: var(--text-muted);">—</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <a asp-action="EditMovie" asp-route-id="@movie.Id" style="display: inline-block; padding: 6px 12px; background: rgba(255,255,255,0.05); border-radius: 6px; color: var(--text-color); text-decoration: none; margin-right: 5px;">
                                    <i class="ti ti-edit"></i>
                                </a>
                                <form asp-action="DeleteMovie" asp-route-id="@movie.Id" method="post" style="display: inline-block;">
                                    <button type="submit" onclick="return confirm('@Localizer.GetString("Admin", "DeleteThisMovie")')"
                                            style="padding: 6px 12px; background: rgba(220,53,69,0.1); border: none; border-radius: 6px; color: var(--danger-color); cursor: pointer;">
                                        <i class="ti ti-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @{
            var currentPage = ViewBag.CurrentPage ?? 1;
            var totalPages = ViewBag.TotalPages ?? 1;
            var searchQuery = ViewBag.SearchQuery ?? "";
        }
        @if (totalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Movies" asp-route-page="@(currentPage - 1)" asp-route-search="@searchQuery">
                            <i class="ti ti-chevron-left"></i> @Localizer.GetString("Admin", "Previous")
                        </a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="Movies" asp-route-page="@i" asp-route-search="@searchQuery">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Movies" asp-route-page="@(currentPage + 1)" asp-route-search="@searchQuery">
                            @Localizer.GetString("Admin", "Next") <i class="ti ti-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
