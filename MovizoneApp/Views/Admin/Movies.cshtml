@model List<MovizoneApp.Models.Movie>
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "MoviesManagement");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@Localizer.GetString("Movies")</h2>
    <a asp-action="CreateMovie" class="btn btn-primary">
        <i class="ti ti-plus"></i> @Localizer.GetString("Admin", "AddNewMovie")
    </a>
</div>

<!-- Search Form -->
<div class="card border-0 shadow-sm mb-3">
    <div class="card-body">
        <form asp-action="Movies" method="get" class="row g-3">
            <div class="col-md-10">
                <input type="text" name="search" class="form-control" placeholder="@Localizer.GetString("Admin", "SearchMoviesByTitle")" value="@ViewBag.SearchQuery">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="ti ti-search"></i> @Localizer.GetString("Admin", "Search")
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>@Localizer.GetString("Admin", "ID")</th>
                        <th>@Localizer.GetString("Movie", "Title")</th>
                        <th>@Localizer.GetString("Common", "Year")</th>
                        <th>@Localizer.GetString("Movie", "Rating")</th>
                        <th>@Localizer.GetString("Admin", "Genre")</th>
                        <th>@Localizer.GetString("Admin", "Duration")</th>
                        <th>@Localizer.GetString("Admin", "Featured")</th>
                        <th>@Localizer.GetString("Common", "Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>@movie.Id</td>
                            <td>
                                <strong>@movie.Title</strong><br>
                                <small class="text-muted">@movie.Director</small>
                            </td>
                            <td>@movie.Year</td>
                            <td>
                                <span class="badge bg-success">@movie.Rating</span>
                            </td>
                            <td>@movie.Genre</td>
                            <td>@movie.Duration @Localizer.GetString("Admin", "Min")</td>
                            <td>
                                @if (movie.IsFeatured)
                                {
                                    <span class="badge bg-primary">@Localizer.GetString("Admin", "Yes")</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Localizer.GetString("Admin", "No")</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="ti ti-edit"></i>
                                </a>
                                <form asp-action="DeleteMovie" asp-route-id="@movie.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('@Localizer.GetString("Admin", "DeleteThisMovie")')">
                                        <i class="ti ti-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @{
            var currentPage = ViewBag.CurrentPage ?? 1;
            var totalPages = ViewBag.TotalPages ?? 1;
            var searchQuery = ViewBag.SearchQuery ?? "";
        }
        @if (totalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Movies" asp-route-page="@(currentPage - 1)" asp-route-search="@searchQuery">
                            <i class="ti ti-chevron-left"></i> @Localizer.GetString("Admin", "Previous")
                        </a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" asp-action="Movies" asp-route-page="@i" asp-route-search="@searchQuery">@i</a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Movies" asp-route-page="@(currentPage + 1)" asp-route-search="@searchQuery">
                            @Localizer.GetString("Admin", "Next") <i class="ti ti-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>
