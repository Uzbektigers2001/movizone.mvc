@model MovizoneApp.DTOs.CreateActorDto
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "CreateActor");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a asp-action="Actors" class="btn btn-outline-secondary">
        <i class="ti ti-arrow-left"></i> @Localizer.GetString("Admin", "BackToActors")
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">@Localizer.GetString("Admin", "AddNewActor")</h5>
    </div>
    <div class="card-body">
        <form asp-action="CreateActor" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "NameRequired")</label>
                    <input asp-for="Name" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "BirthDateRequired")</label>
                    <input asp-for="BirthDate" type="date" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "CountryRequired")</label>
                    <input asp-for="Country" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer.GetString("Admin", "BiographyRequired")</label>
                <textarea asp-for="Bio" class="form-control" rows="4" required></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Photo Path</label>
                    <input asp-for="Photo" class="form-control" placeholder="/img/covers/actor.jpg">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Common", "UploadPhoto")</label>
                    <input type="file" name="photoFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "MoviesCommaSeparated")</label>
                    <input type="text" name="moviesList" class="form-control" placeholder="Inception, Titanic">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">@Localizer.GetString("Admin", "TVSeriesCommaSeparated")</label>
                    <input type="text" name="seriesList" class="form-control" placeholder="Breaking Bad, Friends">
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i> @Localizer.GetString("Admin", "SaveActor")
                </button>
                <a asp-action="Actors" class="btn btn-outline-secondary">@Localizer.GetString("Common", "Cancel")</a>
            </div>
        </form>
    </div>
</div>
