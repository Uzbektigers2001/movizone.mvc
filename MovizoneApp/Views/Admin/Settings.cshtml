@model MovizoneApp.Models.SiteSettings
@{
    ViewData["Title"] = @Localizer.GetString("Admin", "SiteSettings");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="ti ti-settings"></i> @Localizer.GetString("Admin", "SiteSettings")</h2>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="ti ti-check"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="Settings" method="post">
    <div class="row">
        <!-- @Localizer.GetString("Admin", "BannerHeroSection") -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="ti ti-photo"></i> @Localizer.GetString("Admin", "BannerHeroSection")</h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch mb-3">
                        <input asp-for="ShowHeroBanner" class="form-check-input" type="checkbox" id="showHeroBanner">
                        <label class="form-check-label" for="showHeroBanner">
                            <strong>@Localizer.GetString("Admin", "ShowHeroBanner")</strong><br>
                            <small class="text-muted">@Localizer.GetString("Admin", "DisplayMainBanner")</small>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- @Localizer.GetString("Admin", "HomePageSections") -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="ti ti-layout"></i> @Localizer.GetString("Admin", "HomePageSections")</h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch mb-3">
                        <input asp-for="ShowCatalogSection" class="form-check-input" type="checkbox" id="showCatalog">
                        <label class="form-check-label" for="showCatalog">
                            <strong>@Localizer.GetString("Admin", "ShowCatalogSection")</strong><br>
                            <small class="text-muted">@Localizer.GetString("Admin", "DisplayCatalogGrid")</small>
                        </label>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input asp-for="ShowExpectedPremiere" class="form-check-input" type="checkbox" id="showPremiere">
                        <label class="form-check-label" for="showPremiere">
                            <strong>@Localizer.GetString("Admin", "ShowExpectedPremiere")</strong><br>
                            <small class="text-muted">@Localizer.GetString("Admin", "DisplayExpectedPremiere")</small>
                        </label>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input asp-for="ShowRecentlyUpdated" class="form-check-input" type="checkbox" id="showRecent">
                        <label class="form-check-label" for="showRecent">
                            <strong>@Localizer.GetString("Admin", "ShowRecentlyUpdated")</strong><br>
                            <small class="text-muted">@Localizer.GetString("Admin", "DisplayRecentlyUpdated")</small>
                        </label>
                    </div>

                    <div class="form-check form-switch">
                        <input asp-for="ShowPricingPlans" class="form-check-input" type="checkbox" id="showPricing">
                        <label class="form-check-label" for="showPricing">
                            <strong>@Localizer.GetString("Admin", "ShowPricingPlans")</strong><br>
                            <small class="text-muted">@Localizer.GetString("Admin", "DisplayPricingPlans")</small>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Settings -->
        <div class="col-md-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="ti ti-menu"></i> @Localizer.GetString("Admin", "NavigationMenuItems")</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">@Localizer.GetString("Admin", "ControlMenuItems")</p>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ShowHomeInNav" class="form-check-input" type="checkbox" id="showHomeNav">
                                <label class="form-check-label" for="showHomeNav">
                                    <strong>@Localizer.GetString("Admin", "ShowHome")</strong><br>
                                    <small class="text-muted">@Localizer.GetString("Admin", "LinkToHomePage")</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ShowMoviesInNav" class="form-check-input" type="checkbox" id="showMoviesNav">
                                <label class="form-check-label" for="showMoviesNav">
                                    <strong>@Localizer.GetString("Admin", "ShowMovies")</strong><br>
                                    <small class="text-muted">@Localizer.GetString("Admin", "MoviesCatalogLink")</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ShowTVSeriesInNav" class="form-check-input" type="checkbox" id="showSeriesNav">
                                <label class="form-check-label" for="showSeriesNav">
                                    <strong>@Localizer.GetString("Admin", "ShowTVSeries")</strong><br>
                                    <small class="text-muted">@Localizer.GetString("Admin", "TVSeriesCatalogLink")</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ShowActorsInNav" class="form-check-input" type="checkbox" id="showActorsNav">
                                <label class="form-check-label" for="showActorsNav">
                                    <strong>@Localizer.GetString("Admin", "ShowActors")</strong><br>
                                    <small class="text-muted">@Localizer.GetString("Admin", "ActorsListLink")</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ShowPricingPlanInNav" class="form-check-input" type="checkbox" id="showPricingNav">
                                <label class="form-check-label" for="showPricingNav">
                                    <strong>@Localizer.GetString("Admin", "ShowPricingPlan")</strong><br>
                                    <small class="text-muted">@Localizer.GetString("Admin", "PricingPlansPage")</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ShowPagesInNav" class="form-check-input" type="checkbox" id="showPagesNav">
                                <label class="form-check-label" for="showPagesNav">
                                    <strong>@Localizer.GetString("Admin", "ShowPages")</strong><br>
                                    <small class="text-muted">@Localizer.GetString("Admin", "PagesDropdownMenu")</small>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ShowMoreMenuInNav" class="form-check-input" type="checkbox" id="showMoreNav">
                                <label class="form-check-label" for="showMoreNav">
                                    <strong>@Localizer.GetString("Admin", "ShowMoreMenu")</strong><br>
                                    <small class="text-muted">@Localizer.GetString("Admin", "ThreeDotsMenu")</small>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Authentication Settings -->
        <div class="col-md-12">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="ti ti-user"></i> @Localizer.GetString("Admin", "AuthenticationElements")</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">@Localizer.GetString("Admin", "ControlAuthElements")</p>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-check form-switch mb-3">
                                <input asp-for="ShowSignInButton" class="form-check-input" type="checkbox" id="showSignInButton">
                                <label class="form-check-label" for="showSignInButton">
                                    <strong>@Localizer.GetString("Admin", "ShowSignInButton")</strong><br>
                                    <small class="text-muted">@Localizer.GetString("Admin", "DisplaySignInButton")</small>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="ti ti-device-floppy"></i> @Localizer.GetString("Admin", "SaveSettings")
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">@Localizer.GetString("Cancel")</a>
    </div>
</form>
