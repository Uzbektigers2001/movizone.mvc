@model List<MovizoneApp.Models.Review>
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "ReviewsManagement");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- main title -->
<div class="row">
    <div class="col-12">
        <div class="main__title">
            <h2><i class="ti ti-star-half-filled"></i> @Localizer.GetString("Admin", "ReviewsManagement")</h2>
        </div>
    </div>
</div>
<!-- end main title -->

<!-- Search Form -->
<div class="row">
    <div class="col-12">
        <div class="dashbox">
            <div class="dashbox__title">
                <h3><i class="ti ti-search"></i> @Localizer.GetString("Admin", "Search")</h3>
            </div>
            <div style="padding: 20px;">
                <form asp-action="Reviews" method="get" class="row g-3">
                    <div class="col-md-10">
                        <input type="text" name="search" class="form-control" placeholder="@Localizer.GetString("Admin", "SearchReviewsByUserOrComment")" value="@ViewBag.SearchQuery" style="background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.08); color: #fff;">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100" style="background: var(--primary-color); border: none;">
                            <i class="ti ti-search"></i> @Localizer.GetString("Admin", "Search")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="background: rgba(40,167,69,0.1); border: 1px solid var(--success-color); color: var(--success-color);">
        <i class="ti ti-check"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-12">
        <div class="dashbox">
            @if (Model.Any())
            {
                <div class="dashbox__table-wrap">
                    <table class="dashbox__table">
                    <thead>
                        <tr>
                            <th>@Localizer.GetString("Admin", "ID")</th>
                            <th>@Localizer.GetString("Admin", "User")</th>
                            <th>@Localizer.GetString("Admin", "MovieID")</th>
                            <th>@Localizer.GetString("Movie", "Rating")</th>
                            <th>@Localizer.GetString("Admin", "Comment")</th>
                            <th>@Localizer.GetString("Admin", "Date")</th>
                            <th>@Localizer.GetString("Common", "Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var review in Model)
                        {
                            <tr>
                                <td><div class="dashbox__table-text dashbox__table-text--grey">@review.Id</div></td>
                                <td>
                                    <div class="dashbox__table-text">
                                        <strong>@review.UserName</strong><br>
                                        <small style="color: var(--text-muted);">User ID: @review.UserId</small>
                                    </div>
                                </td>
                                <td>
                                    <div class="dashbox__table-text">
                                        <span style="color: var(--primary-color); background: rgba(255,85,165,0.1); padding: 4px 10px; border-radius: 6px; font-size: 12px; font-weight: 600;">Movie #@review.MovieId</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="dashbox__table-text dashbox__table-text--rate">
                                        <i class="ti ti-star-filled"></i> @review.Rating/10
                                    </div>
                                </td>
                                <td>
                                    <div class="dashbox__table-text" style="max-width: 400px;">@review.Comment</div>
                                </td>
                                <td>
                                    <div class="dashbox__table-text">
                                        <small>@review.CreatedAt.ToString("MMM dd, yyyy")<br>@review.CreatedAt.ToString("HH:mm")</small>
                                    </div>
                                </td>
                                <td>
                                    <form asp-action="DeleteReview" asp-route-id="@review.Id" method="post" style="display: inline-block;">
                                        <button type="submit" onclick="return confirm('@Localizer.GetString("Admin", "DeleteThisReview")')"
                                                style="padding: 6px 12px; background: rgba(220,53,69,0.1); border: none; border-radius: 6px; color: var(--danger-color); cursor: pointer;">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Rating Distribution -->
            <div style="padding: 30px; border-top: 1px solid var(--border-color);">
                <h5 style="color: var(--text-color); margin-bottom: 20px;">@Localizer.GetString("Admin", "RatingDistribution")</h5>
                @{
                    var ratingGroups = Model.GroupBy(r => r.Rating)
                                            .Select(g => new { Rating = g.Key, Count = g.Count() })
                                            .OrderByDescending(g => g.Rating)
                                            .ToList();
                    var totalReviews = Model.Count;
                }
                @foreach (var group in ratingGroups)
                {
                    var percentage = (double)group.Count / totalReviews * 100;
                    <div class="mb-3">
                        <div style="display: flex; align-items: center; gap: 15px;">
                            <span style="min-width: 80px; color: var(--warning-color);">
                                <i class="ti ti-star-filled"></i> @group.Rating/10
                            </span>
                            <div class="progress flex-grow-1" style="height: 25px; background: rgba(255,255,255,0.05);">
                                <div class="progress-bar" role="progressbar"
                                     style="width: @percentage%; background: var(--warning-color);"
                                     aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                    @group.Count reviews (@percentage.ToString("0.0")%)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            }
            else
            {
                <div style="padding: 60px 20px; text-align: center;">
                    <i class="ti ti-info-circle" style="font-size: 48px; opacity: 0.3; color: var(--text-muted);"></i>
                    <p style="color: var(--text-muted); margin-top: 20px;">@Localizer.GetString("Admin", "NoReviewsFound")</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss success alerts after 5 seconds
        setTimeout(function() {
            $('.alert-success').fadeOut('slow');
        }, 5000);
    </script>
}
