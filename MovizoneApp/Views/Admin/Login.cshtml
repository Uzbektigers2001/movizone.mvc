@{
    ViewData["Title"] = "Admin Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Login - HotFlix</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/tabler-icons.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            max-width: 400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <h1 class="h3 fw-bold" style="color: #ff55a5;">HotFlix Admin</h1>
                    <p class="text-muted">Sign in to dashboard</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">
                        <i class="ti ti-alert-circle"></i> @ViewBag.Error
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" placeholder="admin@hotflix.com" required>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" placeholder="••••••••" required>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="ti ti-login"></i> Sign In
                    </button>
                </form>

                <div class="mt-4 p-3 bg-light rounded">
                    <p class="mb-1 small"><strong>Demo Credentials:</strong></p>
                    <p class="mb-0 small">Email: admin@hotflix.com</p>
                    <p class="mb-0 small">Password: admin123</p>
                </div>

                <div class="text-center mt-3">
                    <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                        <i class="ti ti-arrow-left"></i> Back to Site
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
