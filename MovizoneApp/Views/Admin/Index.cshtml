@model MovizoneApp.DTOs.DashboardStatisticsDto
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
    ViewData["Title"] = Localizer.GetString("Admin", "Dashboard");
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- main title -->
<div class="row">
    <div class="col-12">
        <div class="main__title">
            <h2>@Localizer.GetString("Admin", "Dashboard")</h2>
            <a asp-action="CreateMovie" class="main__title-link">@Localizer.GetString("Admin", "AddItem")</a>
        </div>
    </div>
</div>
<!-- end main title -->

<!-- Statistics Cards -->
<div class="row">
    <!-- Subscriptions this month -->
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stats">
            <span>@Localizer.GetString("Admin", "SubscriptionsThisMonth")</span>
            <p>
                @Model.SubscriptionsThisMonth.ToString("N0")
                @if (Model.SubscriptionsChange != 0)
                {
                    <b class="@(Model.SubscriptionsChange > 0 ? "green" : "red")">
                        @(Model.SubscriptionsChange > 0 ? "+" : "")@Model.SubscriptionsChange
                    </b>
                }
            </p>
            <i class="ti ti-diamond"></i>
        </div>
    </div>

    <!-- Items added this month -->
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stats">
            <span>@Localizer.GetString("Admin", "ItemsAddedThisMonth")</span>
            <p>
                @Model.ItemsAddedThisMonth.ToString("N0")
                @if (Model.ItemsAddedChange != 0)
                {
                    <b class="@(Model.ItemsAddedChange > 0 ? "green" : "red")">
                        @(Model.ItemsAddedChange > 0 ? "+" : "")@Model.ItemsAddedChange
                    </b>
                }
            </p>
            <i class="ti ti-movie"></i>
        </div>
    </div>

    <!-- Views this month -->
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stats">
            <span>@Localizer.GetString("Admin", "ViewsThisMonth")</span>
            <p>
                @Model.ViewsThisMonth.ToString("N0")
                @if (Model.ViewsChangePercent != 0)
                {
                    <b class="@(Model.ViewsChangePercent > 0 ? "green" : "red")">
                        @(Model.ViewsChangePercent > 0 ? "+" : "")@Model.ViewsChangePercent.ToString("0.0")%
                    </b>
                }
            </p>
            <i class="ti ti-eye"></i>
        </div>
    </div>

    <!-- Reviews this month -->
    <div class="col-12 col-sm-6 col-xl-3">
        <div class="stats">
            <span>@Localizer.GetString("Admin", "ReviewsThisMonth")</span>
            <p>
                @Model.ReviewsThisMonth.ToString("N0")
                @if (Model.ReviewsChange != 0)
                {
                    <b class="@(Model.ReviewsChange > 0 ? "green" : "red")">
                        @(Model.ReviewsChange > 0 ? "+" : "")@Model.ReviewsChange
                    </b>
                }
            </p>
            <i class="ti ti-star-half-filled"></i>
        </div>
    </div>
</div>

<!-- Dashboard Widgets -->
<div class="row">
    <!-- Top Items -->
    <div class="col-12 col-xl-6">
        <div class="dashbox">
            <div class="dashbox__header">
                <h3 class="dashbox__title">
                    <i class="ti ti-trophy"></i> @Localizer.GetString("Admin", "TopItems")
                </h3>
                <div class="dashbox__actions">
                    <a asp-action="Movies">@Localizer.GetString("Admin", "ViewAll")</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="dashbox__table">
                    <thead>
                        <tr>
                            <th>@Localizer.GetString("Admin", "ID")</th>
                            <th>@Localizer.GetString("Movie", "Title")</th>
                            <th>@Localizer.GetString("Admin", "Category")</th>
                            <th>@Localizer.GetString("Movie", "Rating")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TopItems.Any())
                        {
                            @foreach (var item in Model.TopItems)
                            {
                                <tr>
                                    <td><div class="dashbox__table-text dashbox__table-text--grey">@item.Id</div></td>
                                    <td><div class="dashbox__table-text"><a href="#">@item.Title</a></div></td>
                                    <td><div class="dashbox__table-text">@item.Category</div></td>
                                    <td><div class="dashbox__table-text dashbox__table-text--rate"><i class="ti ti-star"></i> @item.Rating.ToString("0.0")</div></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">@Localizer.GetString("Admin", "NoItemsAvailable")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Latest Items -->
    <div class="col-12 col-xl-6">
        <div class="dashbox">
            <div class="dashbox__header">
                <h3 class="dashbox__title">
                    <i class="ti ti-movie"></i> @Localizer.GetString("Admin", "LatestItems")
                </h3>
                <div class="dashbox__actions">
                    <a asp-action="Movies">@Localizer.GetString("Admin", "ViewAll")</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="dashbox__table">
                    <thead>
                        <tr>
                            <th>@Localizer.GetString("Admin", "ID")</th>
                            <th>@Localizer.GetString("Movie", "Title")</th>
                            <th>@Localizer.GetString("Admin", "Category")</th>
                            <th>@Localizer.GetString("Movie", "Rating")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LatestItems.Any())
                        {
                            @foreach (var item in Model.LatestItems)
                            {
                                <tr>
                                    <td><div class="dashbox__table-text dashbox__table-text--grey">@item.Id</div></td>
                                    <td><div class="dashbox__table-text"><a href="#">@item.Title</a></div></td>
                                    <td><div class="dashbox__table-text">@item.Category</div></td>
                                    <td><div class="dashbox__table-text dashbox__table-text--rate"><i class="ti ti-star"></i> @item.Rating.ToString("0.0")</div></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">@Localizer.GetString("Admin", "NoItemsAvailable")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Latest Users -->
    <div class="col-12 col-xl-6">
        <div class="dashbox">
            <div class="dashbox__header">
                <h3 class="dashbox__title">
                    <i class="ti ti-users"></i> @Localizer.GetString("Admin", "LatestUsers")
                </h3>
                <div class="dashbox__actions">
                    <a asp-action="Users">@Localizer.GetString("Admin", "ViewAll")</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="dashbox__table">
                    <thead>
                        <tr>
                            <th>@Localizer.GetString("Admin", "ID")</th>
                            <th>@Localizer.GetString("Admin", "FullName")</th>
                            <th>@Localizer.GetString("Common", "Email")</th>
                            <th>@Localizer.GetString("Admin", "Username")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LatestUsers.Any())
                        {
                            @foreach (var user in Model.LatestUsers)
                            {
                                <tr>
                                    <td><div class="dashbox__table-text">@user.Id</div></td>
                                    <td><div class="dashbox__table-text"><a href="#">@user.Name</a></div></td>
                                    <td><div class="dashbox__table-text dashbox__table-text--grey">@user.Email</div></td>
                                    <td><div class="dashbox__table-text">@user.Username</div></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">@Localizer.GetString("Admin", "NoUsersAvailable")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Latest Reviews -->
    <div class="col-12 col-xl-6">
        <div class="dashbox">
            <div class="dashbox__header">
                <h3 class="dashbox__title">
                    <i class="ti ti-star-half-filled"></i> @Localizer.GetString("Admin", "LatestReviews")
                </h3>
                <div class="dashbox__actions">
                    <a asp-action="Reviews">@Localizer.GetString("Admin", "ViewAll")</a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="dashbox__table">
                    <thead>
                        <tr>
                            <th>@Localizer.GetString("Admin", "ID")</th>
                            <th>@Localizer.GetString("Admin", "Item")</th>
                            <th>@Localizer.GetString("Admin", "Author")</th>
                            <th>@Localizer.GetString("Movie", "Rating")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LatestReviews.Any())
                        {
                            @foreach (var review in Model.LatestReviews)
                            {
                                <tr>
                                    <td><div class="dashbox__table-text dashbox__table-text--grey">@review.Id</div></td>
                                    <td><div class="dashbox__table-text"><a asp-action="EditMovie" asp-route-id="@review.MovieId">@review.ItemTitle</a></div></td>
                                    <td><div class="dashbox__table-text">@review.Author</div></td>
                                    <td><div class="dashbox__table-text dashbox__table-text--rate"><i class="ti ti-star"></i> @review.Rating.ToString("0.0")</div></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-3">@Localizer.GetString("Admin", "NoReviewsAvailable")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
