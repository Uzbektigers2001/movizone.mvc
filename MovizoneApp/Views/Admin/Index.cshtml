@model MovizoneApp.Models.DashboardStatistics
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 bg-primary bg-opacity-10 rounded p-3">
                        <i class="ti ti-movie fs-3 text-primary"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Movies</h6>
                        <h3 class="mb-0">@Model.TotalMovies</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 bg-success bg-opacity-10 rounded p-3">
                        <i class="ti ti-device-tv fs-3 text-success"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">TV Series</h6>
                        <h3 class="mb-0">@Model.TotalSeries</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 bg-warning bg-opacity-10 rounded p-3">
                        <i class="ti ti-users fs-3 text-warning"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Total Users</h6>
                        <h3 class="mb-0">@Model.TotalUsers</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0 bg-info bg-opacity-10 rounded p-3">
                        <i class="ti ti-eye fs-3 text-info"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="text-muted mb-1">Monthly Views</h6>
                        <h3 class="mb-0">@Model.MonthlyViews.ToString("N0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Recent Activities</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentActivities.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <div class="list-group-item border-0 px-0">
                                <div class="d-flex align-items-center">
                                    <i class="@activity.Icon me-3 fs-4 text-muted"></i>
                                    <div class="flex-grow-1">
                                        <p class="mb-0">@activity.Description</p>
                                        <small class="text-muted">@activity.Timestamp.ToString("MMM dd, yyyy HH:mm")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">No recent activities</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0">Quick Stats</h5>
            </div>
            <div class="card-body">
                <div class="mb-3 pb-3 border-bottom">
                    <p class="text-muted mb-1">Today's Views</p>
                    <h4 class="mb-0">@Model.TodayViews.ToString("N0")</h4>
                </div>
                <div class="mb-3 pb-3 border-bottom">
                    <p class="text-muted mb-1">Monthly Revenue</p>
                    <h4 class="mb-0">$@Model.MonthlyRevenue.ToString("N2")</h4>
                </div>
                <div>
                    <p class="text-muted mb-1">Total Actors</p>
                    <h4 class="mb-0">@Model.TotalActors</h4>
                </div>
            </div>
        </div>
    </div>
</div>
