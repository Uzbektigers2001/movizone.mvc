@model List<MovizoneApp.Models.TVSeries>
@{
    ViewData["Title"] = "TV Series Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>TV Series</h2>
    <a asp-action="CreateSeries" class="btn btn-primary">
        <i class="ti ti-plus"></i> Add New Series
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Rating</th>
                        <th>Seasons</th>
                        <th>Episodes</th>
                        <th>Status</th>
                        <th>Featured</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var series in Model)
                    {
                        <tr>
                            <td>@series.Id</td>
                            <td>
                                <strong>@series.Title</strong><br>
                                <small class="text-muted">@series.Creator</small>
                            </td>
                            <td>@series.Year</td>
                            <td>
                                <span class="badge bg-success">@series.Rating</span>
                            </td>
                            <td>@series.Seasons</td>
                            <td>@series.TotalEpisodes</td>
                            <td>
                                @if (series.Status == "Ongoing")
                                {
                                    <span class="badge bg-info">@series.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@series.Status</span>
                                }
                            </td>
                            <td>
                                @if (series.IsFeatured)
                                {
                                    <span class="badge bg-primary">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditSeries" asp-route-id="@series.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="ti ti-edit"></i>
                                </a>
                                <form asp-action="DeleteSeries" asp-route-id="@series.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Delete this series?')">
                                        <i class="ti ti-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
