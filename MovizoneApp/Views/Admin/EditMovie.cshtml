@model MovizoneApp.Models.Movie
@{
    ViewData["Title"] = "Edit Movie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <a asp-action="Movies" class="btn btn-outline-secondary">
        <i class="ti ti-arrow-left"></i> Back to Movies
    </a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-white py-3">
        <h5 class="mb-0">Edit Movie: @Model.Title</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditMovie" method="post" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Title *</label>
                    <input asp-for="Title" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Year *</label>
                    <input asp-for="Year" type="number" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Rating *</label>
                    <input asp-for="Rating" type="number" step="0.1" class="form-control" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Director *</label>
                    <input asp-for="Director" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Duration (minutes) *</label>
                    <input asp-for="Duration" type="number" class="form-control" required>
                </div>
                <div class="col-md-3 mb-3">
                    <label class="form-label">Country *</label>
                    <input asp-for="Country" class="form-control" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Genre *</label>
                <input asp-for="Genre" class="form-control">
            </div>

            <div class="mb-3">
                <label class="form-label">Description *</label>
                <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Current Cover Image</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.CoverImage))
                        {
                            <img src="@Model.CoverImage" alt="Cover" style="max-width: 150px; height: auto;">
                        }
                    </div>
                    <input asp-for="CoverImage" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Upload New Cover</label>
                    <input type="file" name="coverFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Current Poster Image (for video player)</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.PosterImage))
                        {
                            <img src="@Model.PosterImage" alt="Poster" style="max-width: 150px; height: auto;">
                        }
                        else
                        {
                            <small class="text-muted">No poster set (will use cover image)</small>
                        }
                    </div>
                    <input asp-for="PosterImage" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Upload New Poster</label>
                    <input type="file" name="posterFile" class="form-control" accept="image/*">
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Current Banner Image (for homepage carousel)</label>
                    <div class="mb-2">
                        @if (!string.IsNullOrEmpty(Model.BannerImage))
                        {
                            <img src="@Model.BannerImage" alt="Banner" style="max-width: 200px; height: auto;">
                        }
                        else
                        {
                            <small class="text-muted">No banner image set</small>
                        }
                    </div>
                    <input asp-for="BannerImage" class="form-control" placeholder="/img/banners/banner1.jpg">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Upload New Banner Image</label>
                    <input type="file" name="bannerFile" class="form-control" accept="image/*">
                    <small class="text-muted">Recommended: 1920x800px or wider</small>
                </div>
            </div>

            @* TODO: Implement actor selection UI using ActorMovie junction table *@
            @* <div class="mb-3">
                <label class="form-label">Actors (comma separated)</label>
                <input type="text" name="actorsList" class="form-control" value="">
            </div> *@

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Release Date</label>
                    <input asp-for="ReleaseDate" type="date" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Video URL</label>
                    <input asp-for="VideoUrl" class="form-control">
                </div>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="IsFeatured" type="checkbox" class="form-check-input" id="featured">
                    <label class="form-check-label" for="featured">
                        Featured Movie (show in featured sections)
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="ShowInBanner" type="checkbox" class="form-check-input" id="showInBanner">
                    <label class="form-check-label" for="showInBanner">
                        Show in Homepage Banner Carousel
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="IsHidden" type="checkbox" class="form-check-input" id="hidden">
                    <label class="form-check-label" for="hidden">
                        Hide from Public (draft mode)
                    </label>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy"></i> Update Movie
                </button>
                <a asp-action="Movies" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
