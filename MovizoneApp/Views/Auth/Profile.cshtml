@model MovizoneApp.Models.User
@inject MovizoneApp.Services.IReviewService ReviewService
@inject MovizoneApp.Services.IMovieService MovieService
@inject MovizoneApp.Services.ITVSeriesService TVSeriesService
@{
    ViewData["Title"] = "My Profile";
    var userId = Context.Session.GetInt32("UserId") ?? 0;
    var userReviews = ReviewService.GetReviewsByUserId(userId);
}

<section class="py-5">
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <div class="col-12 col-md-3 mb-4">
                <div class="card bg-dark">
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <div class="bg-primary rounded-circle mx-auto d-flex align-items-center justify-content-center"
                                 style="width: 100px; height: 100px;">
                                <i class="ti ti-user" style="font-size: 48px;"></i>
                            </div>
                        </div>
                        <h5>@Model.Name</h5>
                        <p class="text-muted mb-0">@Model.Email</p>
                        <small class="text-muted">Member since @Model.CreatedAt.ToString("MMM yyyy")</small>
                        <hr class="border-secondary">
                        <div class="d-grid gap-2">
                            <a asp-action="Logout" class="btn btn-outline-danger btn-sm">
                                <i class="ti ti-logout"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-9">
                <h2 class="mb-4">My Profile</h2>

                <!-- Statistics Cards -->
                <div class="row mb-4">
                    <div class="col-md-6 mb-3">
                        <div class="card bg-dark border-success">
                            <div class="card-body text-center">
                                <i class="ti ti-star" style="font-size: 32px; color: #ffc107;"></i>
                                <h3 class="mt-2">@userReviews.Count</h3>
                                <p class="text-muted mb-0">Reviews Written</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card bg-dark border-info">
                            <div class="card-body text-center">
                                <i class="ti ti-trophy" style="font-size: 32px; color: #17a2b8;"></i>
                                <h3 class="mt-2">@Model.Role</h3>
                                <p class="text-muted mb-0">Account Type</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tabs -->
                <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="reviews-tab" data-bs-toggle="tab"
                                data-bs-target="#reviews" type="button">
                            <i class="ti ti-star"></i> My Reviews
                        </button>
                    </li>
                </ul>

                <div class="tab-content" id="profileTabsContent">
                    <!-- Reviews Tab -->
                    <div class="tab-pane fade show active" id="reviews">
                        @if (userReviews.Any())
                        {
                            @foreach (var review in userReviews.OrderByDescending(r => r.CreatedAt))
                            {
                                var movie = MovieService.GetMovieById(review.MovieId.Value);
                                var series = movie == null ? TVSeriesService.GetSeriesById(review.MovieId.Value) : null;
                                var title = movie?.Title ?? series?.Title ?? "Unknown";

                                <div class="card bg-dark mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h6 class="mb-1">@title</h6>
                                                <small class="text-muted">@review.CreatedAt.ToString("MMMM dd, yyyy")</small>
                                            </div>
                                            <span class="badge @(review.Rating >= 7 ? "bg-success" : review.Rating >= 5 ? "bg-warning" : "bg-danger")">
                                                @review.Rating/10
                                            </span>
                                        </div>
                                        <p class="mb-0">@review.Comment</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="ti ti-info-circle"></i> You haven't written any reviews yet.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
