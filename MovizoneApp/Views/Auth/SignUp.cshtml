@{
    ViewData["Title"] = "Sign Up";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card bg-dark text-white">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Sign Up</h2>

                        <form asp-action="SignUp" method="post">
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" name="name"
                                       placeholder="@Localizer.GetString("Auth", "EnterYourName")" required>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">@Localizer.GetString("Email")</label>
                                <input type="email" class="form-control" id="email" name="email"
                                       placeholder="@Localizer.GetString("Auth", "EnterYourEmail")" required>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">@Localizer.GetString("Auth", "Password")</label>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="Create a password" required>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="terms" required>
                                <label class="form-check-label" for="terms">
                                    I agree to the <a asp-controller="Home" asp-action="Privacy">Terms and Privacy Policy</a>
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">Sign Up</button>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0">
                                Already have an account?
                                <a asp-action="SignIn" class="text-decoration-none">@Localizer.GetString("SignIn")</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
