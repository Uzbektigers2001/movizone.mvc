@{
    ViewData["Title"] = "Sign In";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card bg-dark text-white">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Sign In</h2>

                        <form asp-action="SignIn" method="post">
                            <div class="mb-3">
                                <label for="email" class="form-label">@Localizer.GetString("Email")</label>
                                <input type="email" class="form-control" id="email" name="email"
                                       placeholder="@Localizer.GetString("Auth", "EnterYourEmail")" required>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label">@Localizer.GetString("Auth", "Password")</label>
                                <input type="password" class="form-control" id="password" name="password"
                                       placeholder="@Localizer.GetString("Auth", "EnterYourPassword")" required>
                            </div>

                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="remember">
                                <label class="form-check-label" for="remember">
                                    Remember me
                                </label>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 mb-3">Sign In</button>

                            <div class="text-center">
                                <a asp-action="ForgotPassword" class="text-decoration-none">
                                    Forgot password?
                                </a>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="mb-0">
                                Don't have an account?
                                <a asp-action="SignUp" class="text-decoration-none">@Localizer.GetString("SignUp")</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
