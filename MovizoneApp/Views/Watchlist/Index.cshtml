@{
    ViewData["Title"] = "My Watchlist";
}

<!-- page title -->
<section class="section section--first">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section__wrap">
                    <h1 class="section__title section__title--head">
                        <i class="ti ti-bookmark"></i> My Watchlist
                    </h1>
                    <ul class="breadcrumbs">
                        <li class="breadcrumbs__item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumbs__item breadcrumbs__item--active">Watchlist</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- end page title -->

<!-- catalog -->
<div class="section section--catalog">
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row g-3 g-md-4">
        @if (ViewBag.IsLoggedIn == true)
        {
            @* Logged-in users: Show server-side data *@
            @if (ViewBag.WatchlistItems != null && ViewBag.WatchlistItems.Count > 0)
            {
                    @foreach (var item in ViewBag.WatchlistItems)
                    {
                        var ratingClass = item.Rating >= 8 ? "item__rate--green" : item.Rating >= 6 ? "item__rate--yellow" : "item__rate--red";
                        <div class="col-6 col-sm-4 col-lg-3 col-xl-2">
                            <div class="item">
                                <div class="item__cover">
                                    <img src="@item.CoverImage" alt="@item.Title">
                                    @if (item.Type == "Movie")
                                    {
                                        <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.MovieId" class="item__play">
                                            <i class="ti ti-player-play-filled"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="TVSeries" asp-action="Details" asp-route-id="@item.MovieId" class="item__play">
                                            <i class="ti ti-player-play-filled"></i>
                                        </a>
                                    }
                                    <span class="item__rate @ratingClass">@item.Rating</span>
                                    <form asp-action="Remove" method="post" class="d-inline">
                                        <input type="hidden" name="movieId" value="@item.MovieId" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button class="item__favorite item__favorite--active" type="submit" title="Remove from watchlist">
                                            <i class="ti ti-bookmark-filled"></i>
                                        </button>
                                    </form>
                                </div>
                                <div class="item__content">
                                    <h3 class="item__title">
                                        @if (item.Type == "Movie")
                                        {
                                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.MovieId">@item.Title</a>
                                        }
                                        else
                                        {
                                            <a asp-controller="TVSeries" asp-action="Details" asp-route-id="@item.MovieId">@item.Title</a>
                                        }
                                    </h3>
                                    <span class="item__category">
                                        <a href="#">@item.Genre</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
            }
            else
            {
                <div class="col-12">
                    <div class="reviews__empty">
                        <i class="ti ti-bookmark-off"></i>
                        <p>Your watchlist is empty. Start adding movies and TV series you want to watch!</p>
                        <div class="mt-4">
                            <a asp-controller="Movie" asp-action="Catalog" class="btn btn-primary me-2">
                                <i class="ti ti-movie"></i> Browse Movies
                            </a>
                            <a asp-controller="TVSeries" asp-action="Catalog" class="btn btn-primary">
                                <i class="ti ti-device-tv"></i> Browse TV Series
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            @* Anonymous users: JavaScript will load from localStorage *@
            <div id="watchlist-items-container">
                @* Items will be loaded by watchlist.js *@
            </div>
        }
        </div>
    </div>
</div>
<!-- end catalog -->
