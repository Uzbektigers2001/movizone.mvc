@{
    ViewData["Title"] = "My Watchlist";
}

<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="h2">
                    <i class="ti ti-bookmark"></i> My Watchlist
                </h1>
                <p class="text-muted">Movies and TV series you want to watch</p>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (ViewBag.IsLoggedIn == true)
        {
            @* Logged-in users: Show server-side data *@
            @if (ViewBag.WatchlistItems != null && ViewBag.WatchlistItems.Count > 0)
            {
                <div class="row g-4">
                    @foreach (var item in ViewBag.WatchlistItems)
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <div class="card bg-dark h-100 border-secondary">
                                <img src="@item.CoverImage" class="card-img-top" alt="@item.Title" style="height: 350px; object-fit: cover;">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@item.Title</h5>
                                    <div class="mb-2">
                                        <span class="item__rate--green me-2">@item.Rating</span>
                                        <span class="text-muted">@item.Year</span>
                                        <span class="badge bg-info ms-2">@item.Type</span>
                                    </div>
                                    <p class="text-muted mb-2">
                                        <small><i class="ti ti-clock"></i> Added: @item.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </p>
                                    <p class="text-muted mb-3">@item.Genre</p>
                                    <div class="mt-auto">
                                        @if (item.Type == "Movie")
                                        {
                                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-primary btn-sm w-100 mb-2">
                                                <i class="ti ti-eye"></i> View Details
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="TVSeries" asp-action="Details" asp-route-id="@item.MovieId" class="btn btn-primary btn-sm w-100 mb-2">
                                                <i class="ti ti-eye"></i> View Details
                                            </a>
                                        }
                                        <form asp-action="Remove" method="post" class="d-inline w-100">
                                            <input type="hidden" name="movieId" value="@item.MovieId" />
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="ti ti-trash"></i> Remove
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="ti ti-info-circle"></i> Your watchlist is empty. Start adding movies and TV series you want to watch!
                        </div>
                        <div class="text-center mt-4">
                            <a asp-controller="Movie" asp-action="Catalog" class="btn btn-primary me-2">
                                <i class="ti ti-movie"></i> Browse Movies
                            </a>
                            <a asp-controller="TVSeries" asp-action="Catalog" class="btn btn-primary">
                                <i class="ti ti-device-tv"></i> Browse TV Series
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            @* Anonymous users: JavaScript will load from localStorage *@
            <div class="row g-4" id="watchlist-items-container">
                @* Items will be loaded by watchlist.js *@
            </div>
        }
    </div>
</section>
