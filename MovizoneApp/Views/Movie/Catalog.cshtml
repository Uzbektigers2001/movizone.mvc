@model List<MovizoneApp.Models.Movie>
@{
    ViewData["Title"] = "Movies Catalog";
}

<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 col-md-6">
                <h1 class="h2">Movies Catalog</h1>
            </div>
            <div class="col-12 col-md-6">
                <form asp-action="Catalog" method="get" class="d-flex">
                    <input type="text" name="search" class="form-control me-2"
                           placeholder="Search movies..." value="@ViewBag.SearchQuery">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
        </div>

        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                foreach (var movie in Model)
                {
                    <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                        <div class="card bg-dark text-white h-100">
                            <div class="position-relative">
                                <img src="https://via.placeholder.com/300x450/1a1a2e/ff55a5?text=@Uri.EscapeDataString(movie.Title)"
                                     class="card-img-top" alt="@movie.Title">
                                <span class="position-absolute top-0 end-0 m-2 item__rate--green">
                                    @movie.Rating
                                </span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a asp-action="Details" asp-route-id="@movie.Id"
                                       class="text-white text-decoration-none">
                                        @movie.Title
                                    </a>
                                </h5>
                                <p class="card-text">
                                    <small class="text-muted">@movie.Genre</small>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">@movie.Year â€¢ @movie.Duration min</small>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center">No movies found.</p>
                </div>
            }
        </div>
    </div>
</section>
