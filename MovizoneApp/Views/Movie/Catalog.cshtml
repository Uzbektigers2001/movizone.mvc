@model MovizoneApp.Helpers.PaginatedList<MovizoneApp.Models.Movie>
@{
    ViewData["Title"] = "Movies Catalog";
}

<section class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12 col-md-4">
                <h1 class="h2">Movies Catalog</h1>
            </div>
            <div class="col-12 col-md-8">
                <form asp-action="Catalog" method="get" class="row g-2">
                    <div class="col-md-4">
                        <select name="genre" class="form-select bg-dark text-white">
                            <option value="">All Genres</option>
                            @if (ViewBag.Genres != null)
                            {
                                foreach (var genre in ViewBag.Genres)
                                {
                                    <option value="@genre" selected="@(ViewBag.SelectedGenre == genre ? "selected" : null)">@genre</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="search" class="form-control bg-dark text-white"
                               placeholder="Search movies..." value="@ViewBag.SearchQuery">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="ti ti-search"></i> Filter
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                foreach (var movie in Model)
                {
                    <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                        <div class="card bg-dark text-white h-100">
                            <div class="position-relative">
                                <img src="@movie.CoverImage"
                                     class="card-img-top" alt="@movie.Title" style="height: 350px; object-fit: cover;">
                                <span class="position-absolute top-0 end-0 m-2 item__rate--green">
                                    @movie.Rating
                                </span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a asp-action="Details" asp-route-id="@movie.Id"
                                       class="text-white text-decoration-none">
                                        @movie.Title
                                    </a>
                                </h5>
                                <p class="card-text">
                                    <small class="text-muted">@movie.Genre</small>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">@movie.Year â€¢ @movie.Duration min</small>
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-center">No movies found.</p>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="row mt-5">
                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link bg-dark text-white border-secondary"
                                   asp-action="Catalog"
                                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                                   asp-route-search="@ViewBag.SearchQuery"
                                   asp-route-genre="@ViewBag.SelectedGenre">
                                    <i class="ti ti-chevron-left"></i> Previous
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                                    <a class="page-link @(Model.PageIndex == i ? "bg-primary" : "bg-dark") text-white border-secondary"
                                       asp-action="Catalog"
                                       asp-route-pageNumber="@i"
                                       asp-route-search="@ViewBag.SearchQuery"
                                       asp-route-genre="@ViewBag.SelectedGenre">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link bg-dark text-white border-secondary"
                                   asp-action="Catalog"
                                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                                   asp-route-search="@ViewBag.SearchQuery"
                                   asp-route-genre="@ViewBag.SelectedGenre">
                                    Next <i class="ti ti-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="text-center text-muted">
                        Showing page @Model.PageIndex of @Model.TotalPages (Total: @Model.TotalCount movies)
                    </p>
                </div>
            </div>
        }
    </div>
</section>
