<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/tabler-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <meta name="description" content="Online Movies, TV Shows & Cinema">
    <meta name="keywords" content="movies, tv shows, cinema, streaming">
    <title>@ViewData["Title"] - HotFlix</title>

    <style>
        body {
            background-color: #0f0f1e;
            color: #fff;
            font-family: 'Inter', sans-serif;
        }
        .header {
            background-color: rgba(15, 15, 30, 0.95);
            padding: 1rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .header__logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ff55a5;
            text-decoration: none;
        }
        .header__nav-link {
            color: #fff;
            text-decoration: none;
            padding: 0.5rem 1rem;
            transition: color 0.3s;
        }
        .header__nav-link:hover {
            color: #ff55a5;
        }
        .footer {
            background-color: #0b0b17;
            padding: 3rem 0 2rem;
            margin-top: 4rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }
        .item__rate--green {
            background-color: #28a745;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-weight: bold;
        }
        .btn-primary {
            background-color: #ff55a5;
            border-color: #ff55a5;
        }
        .btn-primary:hover {
            background-color: #ff3385;
            border-color: #ff3385;
        }
    </style>
</head>

<body>
    <!-- header -->
    <header class="header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-lg navbar-dark">
                        <a asp-controller="Home" asp-action="Index" class="header__logo navbar-brand">
                            HotFlix
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item">
                                    <a class="header__nav-link nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="header__nav-link nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Catalog
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Movie" asp-action="Catalog">Movies</a></li>
                                        <li><a class="dropdown-item" asp-controller="TVSeries" asp-action="Catalog">TV Series</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="header__nav-link nav-link" asp-controller="Pricing" asp-action="Index">Pricing</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="header__nav-link nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Pages
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="About">About</a></li>
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Contacts">Contacts</a></li>
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Faq">Help Center</a></li>
                                        <li><a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <ul class="navbar-nav ms-auto">
                                <li class="nav-item">
                                    <a class="header__nav-link nav-link" asp-controller="Auth" asp-action="SignIn">Sign In</a>
                                </li>
                                <li class="nav-item">
                                    <a class="header__nav-link nav-link" asp-controller="Auth" asp-action="SignUp">Sign Up</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- end header -->

    <!-- main content -->
    <main>
        @RenderBody()
    </main>
    <!-- end main content -->

    <!-- footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-6">
                    <h5 class="footer__title">HotFlix</h5>
                    <p class="footer__text">Your ultimate destination for movies and TV shows</p>
                </div>
                <div class="col-12 col-md-3">
                    <h6 class="footer__title">Quick Links</h6>
                    <ul class="footer__nav list-unstyled">
                        <li><a asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-controller="Home" asp-action="Contacts">Contacts</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-12 col-md-3">
                    <h6 class="footer__title">Support</h6>
                    <ul class="footer__nav list-unstyled">
                        <li><a asp-controller="Home" asp-action="Faq">Help Center</a></li>
                        <li><a asp-controller="Pricing" asp-action="Index">Pricing</a></li>
                    </ul>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <p>&copy; @DateTime.Now.Year HotFlix. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>
    <!-- end footer -->

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
