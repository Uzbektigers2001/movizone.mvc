<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Google Fonts - Open Sans -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

	<!-- CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/tabler-icons.min.css">
	<link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />
	<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />

	<meta name="description" content="Online Movies, TV Shows & Cinema HTML Template">
	<meta name="keywords" content="">
	<meta name="author" content="">
	<title>@ViewData["Title"] - PlayGo</title>
</head>

@inject MovizoneApp.Services.ISiteSettingsService SettingsService
@inject MovizoneApp.Services.ILocalizationService Localizer
@{
	var navSettings = SettingsService.GetSettings();
	var currentCulture = Localizer.GetCurrentCulture();
	var availableLanguages = Localizer.GetAvailableLanguages();
}

<body>
	<!-- header -->
	<header class="header">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="header__content">
						<!-- header logo -->
						<a asp-controller="Home" asp-action="Index" class="header__logo">
							<span>PlayGo</span>
						</a>
						<!-- end header logo -->

						<!-- header nav -->
						<ul class="header__nav">
							@if (navSettings.ShowHomeInNav)
							{
								<!-- dropdown -->
								<li class="header__nav-item">
									<a class="header__nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">@Localizer.GetString("Home") <i class="ti ti-chevron-down"></i></a>

									<ul class="dropdown-menu header__dropdown-menu">
										<li><a asp-controller="Home" asp-action="Index">@Localizer.GetString("Home")</a></li>
										<li><a asp-controller="Statistics" asp-action="Index">@Localizer.GetString("Statistics")</a></li>
									</ul>
								</li>
								<!-- end dropdown -->
							}

							<!-- Catalog Items -->
							@if (navSettings.ShowMoviesInNav)
							{
								<li class="header__nav-item">
									<a asp-controller="Movie" asp-action="Catalog" class="header__nav-link">@Localizer.GetString("Movies")</a>
								</li>
							}

							@if (navSettings.ShowTVSeriesInNav)
							{
								<li class="header__nav-item">
									<a asp-controller="TVSeries" asp-action="Catalog" class="header__nav-link">@Localizer.GetString("TVSeries")</a>
								</li>
							}

							@if (navSettings.ShowActorsInNav)
							{
								<li class="header__nav-item">
									<a asp-controller="Actor" asp-action="Index" class="header__nav-link">@Localizer.GetString("Actors")</a>
								</li>
							}
							<!-- end Catalog Items -->

							@if (navSettings.ShowPricingPlanInNav)
							{
								<li class="header__nav-item">
									<a asp-controller="Pricing" asp-action="Index" class="header__nav-link">@Localizer.GetString("PricingPlan")</a>
								</li>
							}

							@if (navSettings.ShowPagesInNav)
							{
								<!-- dropdown -->
								<li class="header__nav-item">
									<a class="header__nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">@Localizer.GetString("Pages") <i class="ti ti-chevron-down"></i></a>

									<ul class="dropdown-menu header__dropdown-menu">
										<li><a asp-controller="Home" asp-action="About">@Localizer.GetString("AboutUs")</a></li>
										@if (Context.Session.GetInt32("UserId").HasValue)
										{
											<li><a asp-controller="Auth" asp-action="Profile">@Localizer.GetString("Profile")</a></li>
										}
										<li><a asp-controller="Home" asp-action="Contacts">@Localizer.GetString("Contacts")</a></li>
										<li><a asp-controller="Home" asp-action="Faq">@Localizer.GetString("HelpCenter")</a></li>
										<li><a asp-controller="Home" asp-action="Privacy">@Localizer.GetString("PrivacyPolicy")</a></li>
										@if (Context.Session.GetString("UserName") == "admin")
										{
											<li><a asp-controller="Admin" asp-action="Index">@Localizer.GetString("Admin")</a></li>
										}
									</ul>
								</li>
								<!-- end dropdown -->
							}

							@if (navSettings.ShowMoreMenuInNav)
							{
								<!-- dropdown -->
								<li class="header__nav-item">
									<a class="header__nav-link header__nav-link--more" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="ti ti-dots"></i></a>

									<ul class="dropdown-menu header__dropdown-menu">
										<li><a asp-controller="Watchlist" asp-action="Index"><i class="ti ti-bookmark"></i> @Localizer.GetString("Watchlist")</a></li>
										<li><a asp-controller="Watchlist" asp-action="Favorites"><i class="ti ti-heart"></i> @Localizer.GetString("Favorites")</a></li>
										@if (!Context.Session.GetInt32("UserId").HasValue)
										{
											<li><hr class="dropdown-divider"></li>
											<li><a asp-controller="Auth" asp-action="SignIn">@Localizer.GetString("SignIn")</a></li>
											<li><a asp-controller="Auth" asp-action="SignUp">@Localizer.GetString("SignUp")</a></li>
											<li><a asp-controller="Auth" asp-action="ForgotPassword">@Localizer.GetString("ForgotPassword")</a></li>
										}
										else
										{
											<li><hr class="dropdown-divider"></li>
											<li><a asp-controller="Auth" asp-action="Logout">@Localizer.GetString("Logout")</a></li>
										}
									</ul>
								</li>
								<!-- end dropdown -->
							}
						</ul>
						<!-- end header nav -->

						<!-- header auth -->
						<div class="header__auth">
							<form asp-controller="Search" asp-action="Index" method="get" class="header__search">
								<input class="header__search-input" type="text" name="query" placeholder="@Localizer.GetString("Search")...">
								<button class="header__search-button" type="submit">
									<i class="ti ti-search"></i>
								</button>
								<button class="header__search-close" type="button">
									<i class="ti ti-x"></i>
								</button>
							</form>

							<button class="header__search-btn" type="button">
								<i class="ti ti-search"></i>
							</button>

						<!-- language selector -->
						<div class="header__lang">
							<a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="ti ti-world"></i>
								@{
									var currentLangName = availableLanguages.FirstOrDefault(l => l.Code == currentCulture)?.Name ?? "EN";
								}
								<span>@currentLangName</span>
							</a>
							<ul class="dropdown-menu header__dropdown-menu">
								@foreach (var lang in availableLanguages)
								{
									<li>
										<form asp-controller="Language" asp-action="SetLanguage" method="post" class="language-form" data-culture="@lang.Code">
											<input type="hidden" name="culture" value="@lang.Code" />
											<input type="hidden" name="returnUrl" value="@Context.Request.Path" />
											<a href="#" class="dropdown-item @(currentCulture == lang.Code ? "active" : "")" onclick="event.preventDefault(); this.closest('form').submit();">
												@lang.Name
											</a>
										</form>
									</li>
								}
							</ul>
						</div>
						<!-- end language selector -->

					@if (navSettings.ShowSignInButton)
					{
								@if (Context.Session.GetInt32("UserId").HasValue)
								{
									<a asp-controller="Auth" asp-action="Profile" class="header__sign-in">
										<i class="ti ti-user"></i>
										<span>@Context.Session.GetString("UserName")</span>
									</a>
								}
								else
								{
									<a asp-controller="Auth" asp-action="SignIn" class="header__sign-in">
										<i class="ti ti-login"></i>
										<span>@Localizer.GetString("SignIn").ToLower()</span>
									</a>
								}
					}
						<!-- end header auth -->

						<!-- header menu btn -->
						<button class="header__btn" type="button">
							<span></span>
							<span></span>
							<span></span>
						</button>
						<!-- end header menu btn -->
					</div>
				</div>
			</div>
		</div>
	</header>
	<!-- end header -->

	<!-- main content -->
	<main>
		@RenderBody()
	</main>
	<!-- end main content -->

	<!-- footer -->
	<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="footer__content">
						<a asp-controller="Home" asp-action="Index" class="footer__logo">
							<span>PlayGo</span>
						</a>

						<span class="footer__copyright">Â© PLAYGO, @DateTime.Now.Year <br> Powered by ASP.NET Core MVC</span>

						<nav class="footer__nav">
							<a asp-controller="Home" asp-action="About">@Localizer.GetString("AboutUs")</a>
							<a asp-controller="Home" asp-action="Contacts">@Localizer.GetString("Contacts")</a>
							<a asp-controller="Home" asp-action="Privacy">@Localizer.GetString("PrivacyPolicy")</a>
						</nav>

						<button class="footer__back" type="button">
							<i class="ti ti-arrow-narrow-up"></i>
						</button>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<!-- end footer -->

	<!-- JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.plyr.io/3.7.8/plyr.js"></script>
	<script src="~/js/main.js" asp-append-version="true"></script>
	<script src="~/js/favorites.js" asp-append-version="true"></script>
	<script src="~/js/watchlist.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
