<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Google Fonts - Open Sans -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

	<!-- CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/tabler-icons.min.css">
	<link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />
	<link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />

	<meta name="description" content="Online Movies, TV Shows & Cinema HTML Template">
	<meta name="keywords" content="">
	<meta name="author" content="">
	<title>@ViewData["Title"] - HotFlix</title>
</head>

@inject MovizoneApp.Services.ISiteSettingsService SettingsService
@{
	var navSettings = SettingsService.GetSettings();
}

<body>
	<!-- header -->
	<header class="header">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="header__content">
						<!-- header logo -->
						<a asp-controller="Home" asp-action="Index" class="header__logo">
							<span>HotFlix</span>
						</a>
						<!-- end header logo -->

						<!-- header nav -->
						<ul class="header__nav">
							@if (navSettings.ShowHomeInNav)
							{
								<!-- dropdown -->
								<li class="header__nav-item">
									<a class="header__nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Home <i class="ti ti-chevron-down"></i></a>

									<ul class="dropdown-menu header__dropdown-menu">
										<li><a asp-controller="Home" asp-action="Index">Home</a></li>
										<li><a asp-controller="Statistics" asp-action="Index">Statistics</a></li>
									</ul>
								</li>
								<!-- end dropdown -->
							}

							<!-- Catalog Items -->
							@if (navSettings.ShowMoviesInNav)
							{
								<li class="header__nav-item">
									<a asp-controller="Movie" asp-action="Catalog" class="header__nav-link">Movies</a>
								</li>
							}

							@if (navSettings.ShowTVSeriesInNav)
							{
								<li class="header__nav-item">
									<a asp-controller="TVSeries" asp-action="Catalog" class="header__nav-link">TV Series</a>
								</li>
							}

							@if (navSettings.ShowActorsInNav)
							{
								<li class="header__nav-item">
									<a asp-controller="Actor" asp-action="Index" class="header__nav-link">Actors</a>
								</li>
							}
							<!-- end Catalog Items -->

							@if (navSettings.ShowPricingPlanInNav)
							{
								<li class="header__nav-item">
									<a asp-controller="Pricing" asp-action="Index" class="header__nav-link">Pricing plan</a>
								</li>
							}

							@if (navSettings.ShowPagesInNav)
							{
								<!-- dropdown -->
								<li class="header__nav-item">
									<a class="header__nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Pages <i class="ti ti-chevron-down"></i></a>

									<ul class="dropdown-menu header__dropdown-menu">
										<li><a asp-controller="Home" asp-action="About">About Us</a></li>
										@if (Context.Session.GetInt32("UserId").HasValue)
										{
											<li><a asp-controller="Auth" asp-action="Profile">Profile</a></li>
										}
										<li><a asp-controller="Home" asp-action="Contacts">Contacts</a></li>
										<li><a asp-controller="Home" asp-action="Faq">Help center</a></li>
										<li><a asp-controller="Home" asp-action="Privacy">Privacy policy</a></li>
										@if (Context.Session.GetString("UserName") == "admin")
										{
											<li><a asp-controller="Admin" asp-action="Index">Admin pages</a></li>
										}
									</ul>
								</li>
								<!-- end dropdown -->
							}

							<!-- dropdown -->
							<li class="header__nav-item">
								<a class="header__nav-link header__nav-link--more" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="ti ti-dots"></i></a>

								<ul class="dropdown-menu header__dropdown-menu">
									<li><a asp-controller="Watchlist" asp-action="Index"><i class="ti ti-bookmark"></i> Watchlist</a></li>
									<li><a asp-controller="Watchlist" asp-action="Favorites"><i class="ti ti-heart"></i> Favorites</a></li>
									@if (!Context.Session.GetInt32("UserId").HasValue)
									{
										<li><hr class="dropdown-divider"></li>
										<li><a asp-controller="Auth" asp-action="SignIn">Sign in</a></li>
										<li><a asp-controller="Auth" asp-action="SignUp">Sign up</a></li>
										<li><a asp-controller="Auth" asp-action="ForgotPassword">Forgot password</a></li>
									}
									else
									{
										<li><hr class="dropdown-divider"></li>
										<li><a asp-controller="Auth" asp-action="Logout">Logout</a></li>
									}
								</ul>
							</li>
							<!-- end dropdown -->
						</ul>
						<!-- end header nav -->

						<!-- header auth -->
						<div class="header__auth">
							<form asp-controller="Search" asp-action="Index" method="get" class="header__search">
								<input class="header__search-input" type="text" name="query" placeholder="Search...">
								<button class="header__search-button" type="submit">
									<i class="ti ti-search"></i>
								</button>
								<button class="header__search-close" type="button">
									<i class="ti ti-x"></i>
								</button>
							</form>

							<button class="header__search-btn" type="button">
								<i class="ti ti-search"></i>
							</button>

							@if (Context.Session.GetInt32("UserId").HasValue)
							{
								<a asp-controller="Auth" asp-action="Profile" class="header__sign-in">
									<i class="ti ti-user"></i>
									<span>@Context.Session.GetString("UserName")</span>
								</a>
							}
							else
							{
								<a asp-controller="Auth" asp-action="SignIn" class="header__sign-in">
									<i class="ti ti-login"></i>
									<span>sign in</span>
								</a>
							}
						</div>
						<!-- end header auth -->

						<!-- header menu btn -->
						<button class="header__btn" type="button">
							<span></span>
							<span></span>
							<span></span>
						</button>
						<!-- end header menu btn -->
					</div>
				</div>
			</div>
		</div>
	</header>
	<!-- end header -->

	<!-- main content -->
	<main>
		@RenderBody()
	</main>
	<!-- end main content -->

	<!-- footer -->
	<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="footer__content">
						<a asp-controller="Home" asp-action="Index" class="footer__logo">
							<span>HotFlix</span>
						</a>

						<span class="footer__copyright">Â© HOTFLIX, @DateTime.Now.Year <br> Powered by ASP.NET Core MVC</span>

						<nav class="footer__nav">
							<a asp-controller="Home" asp-action="About">About Us</a>
							<a asp-controller="Home" asp-action="Contacts">Contacts</a>
							<a asp-controller="Home" asp-action="Privacy">Privacy policy</a>
						</nav>

						<button class="footer__back" type="button">
							<i class="ti ti-arrow-narrow-up"></i>
						</button>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<!-- end footer -->

	<!-- JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.plyr.io/3.7.8/plyr.js"></script>
	<script src="~/js/main.js" asp-append-version="true"></script>
	<script src="~/js/favorites.js" asp-append-version="true"></script>
	<script src="~/js/watchlist.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
