@model MovizoneApp.Models.Actor
@{
    ViewData["Title"] = Model.Name;
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-3 mb-4">
                @if (!string.IsNullOrEmpty(Model.Photo))
                {
                    <img src="@Model.Photo" class="img-fluid rounded shadow" alt="@Model.Name" style="max-height: 400px; width: 100%; object-fit: cover;">
                }
                else
                {
                    <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="ti ti-user" style="font-size: 120px;"></i>
                    </div>
                }
            </div>
            <div class="col-12 col-md-9">
                <h1 class="h2 mb-3">@Model.Name</h1>
                
                <div class="mb-3">
                    <h6 class="text-muted">Born</h6>
                    <p>@Model.BirthDate.ToString("MMMM dd, yyyy")</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.Bio))
                {
                    <div class="mb-4">
                        <h5>Biography</h5>
                        <p>@Model.Bio</p>
                    </div>
                }

                <!-- Filmography -->
                <div class="mt-4">
                    @if (ViewBag.Movies != null && ViewBag.Movies.Count > 0)
                    {
                        <h5 class="mb-3">
                            <i class="ti ti-movie"></i> Movies (@ViewBag.Movies.Count)
                        </h5>
                        <div class="row g-3 mb-4">
                            @foreach (var movie in ViewBag.Movies)
                            {
                                <div class="col-6 col-md-3">
                                    <div class="card bg-dark h-100">
                                        <img src="@movie.CoverImage" class="card-img-top" alt="@movie.Title" style="height: 200px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            <h6 class="card-title mb-1">
                                                <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="text-white text-decoration-none">
                                                    @movie.Title
                                                </a>
                                            </h6>
                                            <small class="text-muted">@movie.Year</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (ViewBag.TVSeries != null && ViewBag.TVSeries.Count > 0)
                    {
                        <h5 class="mb-3">
                            <i class="ti ti-device-tv"></i> TV Series (@ViewBag.TVSeries.Count)
                        </h5>
                        <div class="row g-3">
                            @foreach (var series in ViewBag.TVSeries)
                            {
                                <div class="col-6 col-md-3">
                                    <div class="card bg-dark h-100">
                                        <img src="@series.CoverImage" class="card-img-top" alt="@series.Title" style="height: 200px; object-fit: cover;">
                                        <div class="card-body p-2">
                                            <h6 class="card-title mb-1">
                                                <a asp-controller="TVSeries" asp-action="Details" asp-route-id="@series.Id" class="text-white text-decoration-none">
                                                    @series.Title
                                                </a>
                                            </h6>
                                            <small class="text-muted">@series.Year</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if ((ViewBag.Movies == null || ViewBag.Movies.Count == 0) && (ViewBag.TVSeries == null || ViewBag.TVSeries.Count == 0))
                    {
                        <div class="alert alert-info">
                            No filmography available for this actor yet.
                        </div>
                    }
                </div>

                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-left"></i> Back to Actors
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
