@{
    ViewData["Title"] = "About Us";
}

<section class="py-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="display-4 mb-3">About HotFlix</h1>
                <p class="lead">Your ultimate destination for movies and TV shows</p>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-12 col-lg-6 mb-4">
                <h2 class="h3 mb-3">Our Story</h2>
                <p>
                    HotFlix was founded with a simple mission: to bring the best entertainment
                    directly to your screen. We believe that great stories have the power to
                    inspire, educate, and bring people together.
                </p>
                <p>
                    With thousands of movies and TV shows, we offer something for everyone.
                    From blockbuster hits to indie gems, from classic films to the latest
                    releases, HotFlix is your one-stop destination for quality entertainment.
                </p>
            </div>
            <div class="col-12 col-lg-6 mb-4">
                <h2 class="h3 mb-3">What We Offer</h2>
                <ul>
                    <li class="mb-2">Unlimited streaming of movies and TV shows</li>
                    <li class="mb-2">New content added regularly</li>
                    <li class="mb-2">Multiple device support</li>
                    <li class="mb-2">High-quality video streaming</li>
                    <li class="mb-2">Personalized recommendations</li>
                    <li class="mb-2">Ad-free viewing experience</li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-md-4 text-center mb-4">
                <div class="mb-3">
                    <i class="ti ti-users" style="font-size: 3rem; color: #ff55a5;"></i>
                </div>
                <h3 class="h4">1M+ Users</h3>
                <p class="text-muted">Join millions of satisfied viewers</p>
            </div>
            <div class="col-12 col-md-4 text-center mb-4">
                <div class="mb-3">
                    <i class="ti ti-movie" style="font-size: 3rem; color: #ff55a5;"></i>
                </div>
                <h3 class="h4">10K+ Movies</h3>
                <p class="text-muted">Extensive library of content</p>
            </div>
            <div class="col-12 col-md-4 text-center mb-4">
                <div class="mb-3">
                    <i class="ti ti-device-tv" style="font-size: 3rem; color: #ff55a5;"></i>
                </div>
                <h3 class="h4">All Devices</h3>
                <p class="text-muted">Watch anywhere, anytime</p>
            </div>
        </div>
    </div>
</section>
