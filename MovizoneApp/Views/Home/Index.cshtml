    <div class="content__head" style="background-color: transparent;">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- content title -->
                    <h2 class="content__title">@Localizer.GetString("Home", "RecentlyUpdated")</h2>
                    <!-- end content title -->

