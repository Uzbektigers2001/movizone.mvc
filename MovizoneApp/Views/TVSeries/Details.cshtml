@model MovizoneApp.Models.TVSeries
@{
    ViewData["Title"] = Model.Title;
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 mb-4">
                <img src="@Model.CoverImage"
                     class="img-fluid rounded" alt="@Model.Title" style="max-height: 600px; object-fit: cover;">
            </div>
            <div class="col-12 col-md-8">
                <h1 class="h2 mb-3">@Model.Title</h1>

                <div class="mb-3">
                    <span class="item__rate--green me-2">@Model.Rating</span>
                    <span class="badge bg-primary me-2">@Model.Status</span>
                    <span class="text-muted">@Model.Year</span>
                </div>

                <div class="mb-4">
                    <h5>Overview</h5>
                    <p>@Model.Description</p>
                </div>

                <div class="row mb-4">
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Genre</h6>
                        <p>@Model.Genre</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Seasons</h6>
                        <p>@Model.Seasons</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Episodes</h6>
                        <p>@Model.TotalEpisodes</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Country</h6>
                        <p>@Model.Country</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Creator</h6>
                        <p>@Model.Creator</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">First Aired</h6>
                        <p>@Model.FirstAired.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>

                @if (Model.Actors.Any())
                {
                    <div class="mb-4">
                        <h5>Cast</h5>
                        <ul class="list-unstyled">
                            @foreach (var actor in Model.Actors)
                            {
                                <li class="mb-1">â€¢ @actor</li>
                            }
                        </ul>
                    </div>
                }

                <div class="mt-4">
                    <a asp-action="Catalog" class="btn btn-secondary">
                        <i class="ti ti-arrow-left"></i> Back to Catalog
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#videoModal">
                        <i class="ti ti-player-play"></i> Watch Now
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Video Modal -->
<div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="videoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="videoModalLabel">@Model.Title - Episode 1</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="ratio ratio-16x9">
                    <video id="seriesPlayer" controls>
                        <source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
                <div class="mt-3">
                    <p class="text-muted mb-1">Sample video - In production, this would be the actual TV series episode.</p>
                    <p class="text-muted mb-0"><small>Video: Elephants Dream (Open Source)</small></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Pause video when modal is closed
        document.getElementById('videoModal').addEventListener('hidden.bs.modal', function () {
            var video = document.getElementById('seriesPlayer');
            video.pause();
            video.currentTime = 0;
        });
    </script>
}
