@model MovizoneApp.Models.TVSeries
@{
    ViewData["Title"] = Model.Title;
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 mb-4">
                <img src="@Model.CoverImage"
                     class="img-fluid rounded" alt="@Model.Title" style="max-height: 600px; object-fit: cover;">
            </div>
            <div class="col-12 col-md-8">
                <h1 class="h2 mb-3">@Model.Title</h1>

                <div class="mb-3">
                    <span class="item__rate--green me-2">@Model.Rating</span>
                    <span class="badge bg-primary me-2">@Model.Status</span>
                    <span class="text-muted">@Model.Year</span>
                </div>

                <div class="mb-4">
                    <h5>Overview</h5>
                    <p>@Model.Description</p>
                </div>

                <div class="row mb-4">
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Genre</h6>
                        <p>@Model.Genre</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Seasons</h6>
                        <p>@Model.Seasons</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Episodes</h6>
                        <p>@Model.TotalEpisodes</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Country</h6>
                        <p>@Model.Country</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">Creator</h6>
                        <p>@Model.Creator</p>
                    </div>
                    <div class="col-6 col-md-4 mb-3">
                        <h6 class="text-muted">First Aired</h6>
                        <p>@Model.FirstAired.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>

                @if (Model.Actors.Any())
                {
                    <div class="mb-4">
                        <h5>Cast</h5>
                        <ul class="list-unstyled">
                            @foreach (var actor in Model.Actors)
                            {
                                <li class="mb-1">â€¢ @actor</li>
                            }
                        </ul>
                    </div>
                }

                <div class="mt-4">
                    <a asp-action="Catalog" class="btn btn-secondary">
                        <i class="ti ti-arrow-left"></i> Back to Catalog
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#videoModal">
                        <i class="ti ti-player-play"></i> Watch Now
                    </button>
                    @if (ViewBag.IsInWatchlist)
                    {
                        <form asp-controller="Watchlist" asp-action="Remove" method="post" class="d-inline">
                            <input type="hidden" name="movieId" value="@Model.Id" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="ti ti-bookmark-off"></i> Remove from Watchlist
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Watchlist" asp-action="Add" method="post" class="d-inline">
                            <input type="hidden" name="movieId" value="@Model.Id" />
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                            <button type="submit" class="btn btn-outline-success">
                                <i class="ti ti-bookmark-plus"></i> Add to Watchlist
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="row mt-5">
            <div class="col-12">
                <div class="card bg-dark border-secondary">
                    <div class="card-header border-secondary">
                        <h4 class="mb-0">Reviews & Comments</h4>
                        @if (ViewBag.ReviewCount > 0)
                        {
                            <small class="text-muted">
                                Average Rating: <span class="item__rate--green">@ViewBag.AverageRating.ToString("0.0")</span>
                                (@ViewBag.ReviewCount review@(ViewBag.ReviewCount != 1 ? "s" : ""))
                            </small>
                        }
                    </div>
                    <div class="card-body">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">@TempData["Success"]</div>
                        }
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">@TempData["Error"]</div>
                        }

                        <!-- Add Review Form -->
                        <form asp-action="AddReview" method="post" class="mb-4 p-3 bg-dark border border-secondary rounded">
                            <h5 class="mb-3">Add Your Review</h5>
                            <input type="hidden" name="seriesId" value="@Model.Id" />
                            <div class="mb-3">
                                <label for="userName" class="form-label">Your Name</label>
                                <input type="text" class="form-control bg-dark text-white" id="userName" name="userName" required>
                            </div>
                            <div class="mb-3">
                                <label for="rating" class="form-label">Rating</label>
                                <select class="form-select bg-dark text-white" id="rating" name="rating" required>
                                    <option value="">Select rating...</option>
                                    <option value="10">10 - Masterpiece</option>
                                    <option value="9">9 - Excellent</option>
                                    <option value="8">8 - Very Good</option>
                                    <option value="7">7 - Good</option>
                                    <option value="6">6 - Above Average</option>
                                    <option value="5">5 - Average</option>
                                    <option value="4">4 - Below Average</option>
                                    <option value="3">3 - Poor</option>
                                    <option value="2">2 - Very Poor</option>
                                    <option value="1">1 - Terrible</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="comment" class="form-label">Your Review</label>
                                <textarea class="form-control bg-dark text-white" id="comment" name="comment" rows="4" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-send"></i> Submit Review
                            </button>
                        </form>

                        <!-- Display Reviews -->
                        @if (ViewBag.Reviews != null && ViewBag.Reviews.Count > 0)
                        {
                            <h5 class="mb-3">User Reviews</h5>
                            @foreach (var review in ViewBag.Reviews)
                            {
                                <div class="card bg-dark border-secondary mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h6 class="mb-0">@review.UserName</h6>
                                                <small class="text-muted">@review.CreatedAt.ToString("MMMM dd, yyyy")</small>
                                            </div>
                                            <span class="badge @(review.Rating >= 7 ? "bg-success" : review.Rating >= 5 ? "bg-warning" : "bg-danger")">
                                                @review.Rating/10
                                            </span>
                                        </div>
                                        <p class="mb-0">@review.Comment</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-info">No reviews yet. Be the first to review this series!</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Video Modal -->
<div class="modal fade" id="videoModal" tabindex="-1" aria-labelledby="videoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="videoModalLabel">@Model.Title - Episode 1</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <video id="seriesPlayer" playsinline controls data-poster="@Model.CoverImage">
                    @if (!string.IsNullOrEmpty(Model.VideoUrl))
                    {
                        <source src="@Model.VideoUrl" type="video/mp4" size="1080">
                    }
                    else
                    {
                        <source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4" type="video/mp4" size="720">
                        <source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4" type="video/mp4" size="1080">
                    }
                </video>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize Plyr for TV Series
        document.addEventListener('DOMContentLoaded', function() {
            let seriesPlayer = null;

            // Initialize player when modal is shown
            document.getElementById('videoModal').addEventListener('shown.bs.modal', function () {
                if (!seriesPlayer) {
                    seriesPlayer = new Plyr('#seriesPlayer', {
                        controls: ['play-large', 'play', 'progress', 'current-time', 'duration', 'mute', 'volume', 'settings', 'pip', 'airplay', 'fullscreen'],
                        settings: ['quality', 'speed'],
                        speed: { selected: 1, options: [0.5, 0.75, 1, 1.25, 1.5, 2] },
                        quality: {
                            default: 720,
                            options: [1080, 720]
                        },
                        ratio: '16:9',
                        autoplay: true,
                        clickToPlay: true,
                        keyboard: { focused: true, global: true }
                    });
                }
            });

            // Pause and reset when modal is closed
            document.getElementById('videoModal').addEventListener('hidden.bs.modal', function () {
                if (seriesPlayer) {
                    seriesPlayer.pause();
                    seriesPlayer.currentTime = 0;
                }
            });
        });
    </script>
}
